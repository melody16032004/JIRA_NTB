@model List<JIRA_NTB.ViewModels.LogGroupViewModel.UserDailyGroupViewModel>

<script src="//unpkg.com/alpinejs" defer></script>

@{
    ViewData["Title"] = "Nhật ký giám sát";
}

<div class="container mx-auto px-4 py-8"
     x-data="{
        showSettings: false,
        isLoading: false,
        async openSettings() {
            this.showSettings = true;
            this.isLoading = true;
            try {
                const response = await fetch('@Url.Action("GetSettings", "LogMonitor")');
                const html = await response.text();
                document.getElementById('settings-modal-content').innerHTML = html;
            } catch (error) {
                alert('Lỗi tải cấu hình.');
            } finally {
                this.isLoading = false;
            }
        }
     }">

    <div class="bg-white p-4 rounded-lg shadow mb-6 dark:bg-gray-800 transition-colors duration-200">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold text-gray-800 dark:text-white">📷 Nhật ký hoạt động</h1>

            <button @@click ="openSettings()" type="button" class="flex items-center px-3 py-2 text-sm font-medium text-gray-600 bg-gray-100 rounded-md hover:bg-gray-200 hover:text-indigo-600 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white transition">
                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                Cấu hình
            </button>
        </div>

        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Ngày xem</label>
                <input type="date" name="searchDate" value="@ViewBag.SearchDate"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm dark:bg-gray-700 dark:border-gray-600 dark:text-white">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Từ giờ</label>
                <input type="time" name="fromTime" value="@ViewBag.FromTime"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border dark:bg-gray-700 dark:border-gray-600 dark:text-white">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Đến giờ</label>
                <input type="time" name="toTime" value="@ViewBag.ToTime"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border dark:bg-gray-700 dark:border-gray-600 dark:text-white">
            </div>
            <div class="flex items-end">
                <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition dark:bg-blue-600 dark:hover:bg-blue-700">
                    🔍 Lọc dữ liệu
                </button>
            </div>
        </form>
    </div>

    <div id="log-container">
        @await Html.PartialAsync("~/Views/LogMonitor/PartialView/_UserLogListPartial.cshtml", Model)
    </div>

    <template x-teleport="body">
        <div x-show="showSettings"
             style="display: none;"
             class="fixed inset-0 z-[9999] overflow-y-auto"
             aria-labelledby="modal-title" role="dialog" aria-modal="true">

            <div x-show="showSettings"
                 x-transition:enter="ease-out duration-300"
                 x-transition:enter-start="opacity-0"
                 x-transition:enter-end="opacity-100"
                 x-transition:leave="ease-in duration-200"
                 x-transition:leave-start="opacity-100"
                 x-transition:leave-end="opacity-0"
                 class="fixed inset-0 bg-gray-900 bg-opacity-75 backdrop-blur-sm transition-opacity"></div>

            <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
                <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">

                    <div x-show="showSettings"
                         x-transition:enter="ease-out duration-300"
                         x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                         x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                         x-transition:leave="ease-in duration-200"
                         x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                         x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                         class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-2xl dark:bg-gray-800">

                        <div id="settings-modal-content">
                            <div class="bg-white dark:bg-gray-800 p-8 text-center">
                                <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-indigo-600 mx-auto dark:border-indigo-400"></div>
                                <p class="mt-4 text-gray-500 dark:text-gray-400">Đang tải cấu hình...</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </template>
</div>