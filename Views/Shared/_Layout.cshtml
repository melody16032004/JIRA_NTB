@* 
    Views/Shared/_Layout.cshtml 
    Layout chính với sidebar cố định bên trái
*@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ứng Dụng Của Tôi</title>
    <link rel="stylesheet" href="/css/style.css"/>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-gray-100">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <aside id="sidebar"
            class="w-64 bg-gradient-to-b from-gray-900 to-gray-800 text-gray-200 flex flex-col shadow-2xl side-bar min-h-screen
                    fixed lg:static top-0 left-0 h-full z-50
                    transform -translate-x-full lg:translate-x-0
                    transition-transform duration-300 ease-in-out">
            <!-- Header / Logo -->
            <div class="p-5 bg-gray-950 flex items-center justify-center border-b border-gray-700 relative">
                <img src="/assets/project.png" class="w-11 h-11 mr-3"/>
                <h1 class="text-lg font-bold tracking-wide text-white uppercase">Quản Lý Dự Án</h1>

                <!-- THÊM MỚI: Nút đóng sidebar (chỉ hiện trên di động) -->
                @* <button id="sidebarClose" class="lg:hidden absolute top-3.5 right-3 p-2 rounded-full text-gray-400 hover:bg-gray-700 hover:text-white transition-colors">
                    <i data-lucide="x" class="w-5 h-5"></i>
                </button> *@
            </div>

            <!-- Navigation -->
            <nav class="flex-1 overflow-y-auto px-3 py-5 space-y-2">
                <!-- Item -->
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="home" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Tổng quan</span>
                </a>

                @if (User.IsInRole("ADMIN"))
                {
                    <a asp-area="Admin" asp-controller="Department" asp-action="Index"
                       class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                        <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                            <i data-lucide="Building" class="w-4 h-4"></i>
                        </div>
                        <span class="ml-3 font-medium">Phòng ban</span>
                    </a>

                    <a asp-area="Admin" asp-controller="Admin" asp-action="Index"
                       class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                        <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                            <i data-lucide="Users" class="w-4 h-4"></i>
                        </div>
                        <span class="ml-3 font-medium">Nhân viên</span>
                    </a>
                }

                @if (User.IsInRole("ADMIN") || User.IsInRole("LEADER"))
                {
                    <a asp-area="" asp-controller="Project" asp-action="Index"
                       class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                        <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                            <i data-lucide="folder-git-2" class="w-4 h-4"></i>
                        </div>
                        <span class="ml-3 font-medium">Dự án</span>
                    </a>
                }
                <a asp-area="" asp-controller="RankUser" asp-action="Index"
                     class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                      <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                            <i data-lucide="award" class="w-4 h-4"></i>
                      </div>
                    <span class="ml-3 font-medium">Xếp hạng</span>
                </a>
                <a asp-area="" asp-controller="Task" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="clipboard-list" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Nhiệm vụ</span>
                </a>

                <a asp-area="" asp-controller="Setting" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="settings" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Cài đặt</span>
                </a>
            </nav>

            <!-- Footer -->
            <div class="p-4 border-t border-gray-700 text-sm text-gray-400 text-center">
                © 2025 Quản Lý Pro
            </div>
        </aside>
        <!-- Lớp phủ mờ (chỉ hiện khi mở sidebar trên di động) -->
        <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden lg:hidden"></div>

        <!-- Main Content Area -->
        <main class="main-content flex-1 overflow-y-hidden divide-y divide-gray-700 scroll-smooth bg-gradient-to-b from-gray-950 to-gray-900 text-gray-200 shadow-inner relative ">
            <!-- Header -->
            <header class="bg-gray-900 border-b border-gray-700 shadow-md sticky top-0 z-30">
                <div class="px-6 py-4 flex items-center justify-between">
                    <!-- THAY ĐỔI: Bọc nút toggle và tiêu đề trong 1 div -->
                    <div class="flex items-center">
                        <!-- THÊM MỚI: Nút Hamburger (chỉ hiện trên di động) -->
                        <button id="sidebarToggle" class="lg:hidden p-2 rounded-md text-gray-300 hover:bg-gray-700 hover:text-white mr-3 -ml-2 transition-colors">
                            <i data-lucide="menu" class="w-6 h-6"></i>
                        </button>

                        <div class="flex flex-col align-items-center">
                            <h2 class="text-2xl font-semibold text-white tracking-wide">
                                @ViewData["Title"] <!-- Giả sử đây là Razor syntax -->
                            </h2>
                            <div class="flex items-center gap-[5px]">
                                <span class="text-xs text-gray-400">Xin chào,</span>
                                <span id="me" class="text-xs text-gray-200 bg-indigo-800 rounded-full px-3 py-[2px] inline-flex items-center justify-center">
                                    @if (User.IsInRole("ADMIN"))
                                    {
                                        <i data-lucide="crown" class="w-3.5 h-3.5 text-yellow-500 inline-block mr-1"></i>
                                    }else if (User.IsInRole("LEADER"))
                                    {
                                        <i data-lucide="briefcase" class="w-3.5 h-3.5 text-yellow-500 inline-block mr-1"></i>
                                    }else if (User.IsInRole("EMPLOYEE"))
                                    {
                                        <i data-lucide="user" class="w-3.5 h-3.5 text-yellow-500 inline-block mr-1"></i>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Action buttons -->
                    <div class="flex items-center space-x-3 relative">
                        <!-- Theme -->
                        <!--
                        <div class="relative group">
                            <button onclick="toggleTheme()" id="themeButton" class="w-10 h-10 z-30 flex items-center justify-center rounded-full bg-gray-800 hover:bg-indigo-600 transition-all shadow-md relative">
                                <i data-lucide="sun" class="w-5 h-5 text-gray-300"></i>
                            </button>

                            <span class="absolute -bottom-10 left-1/2 -translate-x-1/2 bg-gray-900 text-white text-xs rounded-md px-2 py-1 opacity-0 scale-90 group-hover:opacity-100 group-hover:scale-100 transition-all duration-200 whitespace-nowrap shadow-lg">
                                Giao diện
                            </span>
                        </div>
                        -->

                        <!-- Notify -->
                        <div class="relative group">
                            <button id="notifyButton"
                                    class="w-10 h-10 z-30 flex items-center justify-center rounded-full bg-gray-800 hover:bg-indigo-600 transition-all shadow-md relative">
                                <i data-lucide="bell" class="w-5 h-5 text-gray-300"></i>

                                <!-- Badge -->
                                <span id="notifyBadge"
                                      class="absolute -top-1.5 -right-1.5 bg-red-600 text-white text-xs font-bold w-5 h-5 flex items-center justify-center rounded-full border-2 border-gray-900 shadow-sm">
                                    3
                                </span>
                            </button>

                            <!-- Tooltip -->
                            <span class="absolute -bottom-10 left-1/2 -translate-x-1/2 bg-gray-900 text-white text-xs rounded-md px-2 py-1 opacity-0 scale-90 group-hover:opacity-100 group-hover:scale-100 transition-all duration-200 whitespace-nowrap shadow-lg">
                                Thông báo
                            </span>

                            <!-- Notification Dropdown -->
                            <div id="notifyDropdown"
                                 class="absolute right-0 mt-3 w-80 bg-gray-800 border border-gray-700 rounded-lg shadow-lg z-50 opacity-0 scale-95 pointer-events-none transition-all duration-200 ease-out transform origin-top-right">
                                <div class="px-4 py-3 border-b border-gray-700 flex justify-between items-center">
                                    <h3 class="text-sm font-semibold text-gray-100">Thông báo</h3>
                                    <button id="clearNotify" class="text-xs text-indigo-400 hover:text-indigo-300 transition">
                                        Đánh dấu là đã đọc
                                    </button>
                                </div>

                                <div class="relative max-h-80 overflow-y-auto" id="notifyDropdownContainer">
                                    <ul class="max-h-80 overflow-y-auto divide-y divide-gray-700 scroll-smooth">
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3 unread cursor-pointer">
                                            <div class="relative">
                                                <i data-lucide="alert-circle" class="w-5 h-5 text-indigo-400 mt-0.5"></i>
                                                <span class="absolute -top-1 -right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                                            </div>
                                            <div>
                                                <p class="text-sm text-gray-200">Hệ thống sẽ bảo trì vào lúc 22:00 tối nay.</p>
                                                <span class="text-xs text-gray-400">10 phút trước</span>
                                            </div>
                                        </li>
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3 unread cursor-pointer">
                                            <div class="relative">
                                                <i data-lucide="user-plus" class="w-5 h-5 text-green-400 mt-0.5"></i>
                                                <span class="absolute -top-1 -right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                                            </div>
                                            <div>
                                                <p class="text-sm text-gray-200">Người dùng mới vừa đăng ký: <b>Nguyễn Văn A</b>.</p>
                                                <span class="text-xs text-gray-400">30 phút trước</span>
                                            </div>
                                        </li>

                                        <!-- Các thông báo đã đọc (không có class unread, không có chấm đỏ) -->
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3 cursor-pointer">
                                            <i data-lucide="check-circle-2" class="w-5 h-5 text-blue-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-300">Dự án “Quản lý công việc” đã được hoàn thành.</p>
                                                <span class="text-xs text-gray-500">1 giờ trước</span>
                                            </div>
                                        </li>
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="message-square" class="w-5 h-5 text-yellow-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Bạn có tin nhắn mới từ <b>Phòng Kỹ thuật</b>.</p>
                                                <span class="text-xs text-gray-400">2 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="calendar-days" class="w-5 h-5 text-pink-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Cuộc họp định kỳ sẽ diễn ra vào lúc <b>9:00 sáng mai</b>.</p>
                                                <span class="text-xs text-gray-400">3 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="upload-cloud" class="w-5 h-5 text-cyan-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Tệp báo cáo tháng 10 đã được tải lên thành công.</p>
                                                <span class="text-xs text-gray-400">5 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="alert-triangle" class="w-5 h-5 text-red-500 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Phát hiện lỗi đồng bộ dữ liệu trong hệ thống.</p>
                                                <span class="text-xs text-gray-400">6 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="star" class="w-5 h-5 text-amber-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Chúc mừng! Bạn đã đạt danh hiệu <b>Nhân viên xuất sắc tuần này</b>.</p>
                                                <span class="text-xs text-gray-400">8 giờ trước</span>
                                            </div>
                                        </li>
                                    </ul>

                                    <div class="absolute bottom-0 left-0 w-full h-6 bg-gradient-to-t from-gray-900 to-transparent pointer-events-none"></div>
                                </div>
                            </div>
                        </div>

                        <!-- User -->
                        <div class="relative group">
                            <button id="userMenuButton"
                                    class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-800 hover:bg-indigo-600 transition-all shadow-md">
                                <i data-lucide="user" class="w-5 h-5 text-gray-300"></i>
                            </button>

                            <!-- Tooltip -->
                            <span class="absolute -bottom-10 left-1/2 -translate-x-1/2 bg-gray-900 text-white text-xs rounded-md px-2 py-1 opacity-0 scale-90 group-hover:opacity-100 group-hover:scale-100 transition-all duration-200 whitespace-nowrap shadow-lg">
                                Người dùng
                            </span>

                            <!-- Dropdown -->
                            <div id="userDropdown"
                                 class="absolute right-0 mt-3 w-56 bg-gray-800 border border-gray-700 rounded-lg shadow-lg z-50 opacity-0 scale-95 pointer-events-none transition-all duration-200 ease-out transform origin-top-right">

                                @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <!-- Hiển thị khi ĐÃ đăng nhập -->
                                    <div class="px-4 py-3 border-b border-gray-700 text-sm text-gray-200">
                                        <div class="font-medium">@User.Identity.Name</div>
                                        <div class="text-xs text-gray-400">Đã đăng nhập</div>
                                    </div>
                                    <ul class="py-2 text-sm text-gray-200">
                                        <li>
                                            <!-- Form POST cho Logout (bắt buộc dùng POST, không dùng GET) -->
                                            <form asp-area="" asp-controller="Account" asp-action="Profile" method="get" class="m-0">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="w-full text-left flex items-center px-4 py-2 hover:bg-indigo-600 hover:text-white transition bg-transparent border-0">
                                                    <i data-lucide="user-circle" class="w-4 h-4 mr-2"></i>
                                                    Thông tin tài khoản
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <!-- Form POST cho Logout (bắt buộc dùng POST, không dùng GET) -->
                                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="w-full text-left flex items-center px-4 py-2 hover:bg-indigo-600 hover:text-white transition bg-transparent border-0">
                                                    <i data-lucide="log-out" class="w-4 h-4 mr-2"></i>
                                                    Đăng xuất
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                }
                                else
                                {
                                    <!-- Hiển thị khi CHƯA đăng nhập -->
                                    <ul class="py-2 text-sm text-gray-200">
                                        <li>
                                            <a asp-controller="Account" asp-action="Login"
                                               class="flex items-center px-4 py-2 hover:bg-indigo-600 hover:text-white transition">
                                                <i data-lucide="log-in" class="w-4 h-4 mr-2"></i>
                                                Đăng nhập
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Account" asp-action="Register"
                                               class="flex items-center px-4 py-2 hover:bg-indigo-600 hover:text-white transition">
                                                <i data-lucide="user-plus" class="w-4 h-4 mr-2"></i>
                                                Đăng ký
                                            </a>
                                        </li>
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <div class="p-4 bg-gray-900/60 rounded-b-xl backdrop-blur-md max-h-[90vh] custom-scroll overflow-y-auto">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Floating Calendar Button -->
    <div id="calendarButton"
         class="fixed bottom-6 right-6 w-12 h-12 rounded-full bg-indigo-600 hover:bg-indigo-500 shadow-xl flex items-center justify-center cursor-pointer transition-all z-50"
         style="box-shadow: 0 0px 25px rgba(59, 130, 246, 0.6);">
        <i data-lucide="calendar" class="w-6 h-6 text-white"></i>
    </div>

    <!-- Calendar Popup -->
    <div id="calendarPopup"
         class="hidden fixed bottom-20 right-6  backdrop-blur-lg text-gray-100 rounded-2xl shadow-2xl border border-gray-700 w-[340px] p-4 z-50 transition-all duration-300"
         style="box-shadow: 0 0px 25px rgba(59,130,246,0.4);">

        <div class="mb-4">
            <div class="flex items-center justify-between mb-2 text-indigo-400">
                <div class="font-semibold text-lg flex items-center gap-2">
                    <i data-lucide="bell" class="w-4 h-4"></i> 
                    <span class="text-sm">Thông báo</span>
                </div>
                @* <div class="cursor-pointer">
                    <button id="idRefreshDeadline" class="p-2 hover:bg-gray-700 rounded-full">
                        <i data-lucide="rotate-cw" class="w-4 h-4"></i>
                    </button>
                </div> *@
            </div>

            <div id="calendarSummary" class="md:max-h-[170px] max-h-[140px] overflow-y-auto custom-scroll bg-gray-800/60 rounded-lg p-2 space-y-1.5 border border-gray-700"></div>
        </div>

        <hr class="border-gray-700 mb-4">

        <div class="bg-gray-800/60 rounded-xl border border-gray-700 p-3">
            <div id="calendar-header" class="flex items-center justify-between mb-3">
                <button id="prevMonth" class="p-1 hover:bg-gray-700 rounded">
                    <i data-lucide="chevron-left" class="w-5 h-5"></i>
                </button>

                <div class="flex-grow flex items-center justify-center gap-2 mx-2">
                    <select id="selectMonth" class="w-full cursor-pointer text-sm bg-gray-700 border-gray-600 rounded-md p-1 focus:ring-indigo-500 focus:border-indigo-500">
                    </select>
                    <select id="selectYear" class="w-full cursor-pointer text-sm bg-gray-700 border-gray-600 rounded-md p-1 focus:ring-indigo-500 focus:border-indigo-500">
                    </select>
                </div>

                <button id="nextMonth" class="p-1 hover:bg-gray-700 rounded">
                    <i data-lucide="chevron-right" class="w-5 h-5"></i>
                </button>
            </div>

            <div class="grid grid-cols-7 gap-1 text-center text-sm">
                <div class="font-semibold text-indigo-400">T2</div>
                <div class="font-semibold text-indigo-400">T3</div>
                <div class="font-semibold text-indigo-400">T4</div>
                <div class="font-semibold text-indigo-400">T5</div>
                <div class="font-semibold text-indigo-400">T6</div>
                <div class="font-semibold text-indigo-400">T7</div>
                <div class="font-semibold text-indigo-400">CN</div>
            </div>

            <div id="task-detail" class="hidden mt-2 text-center text-sm">
                
            </div>
            <div id="calendarDays" class="grid grid-cols-7 gap-1 mt-2 text-center text-sm"></div>
        </div>
    </div>


    @RenderSection("GlobalModals", required: false)

    <script>lucide.createIcons();</script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/js/site.js"></script>
    <script src="/js/calendar.js"></script>
    
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const menuItems = document.querySelectorAll("#sidebarMenu .sidebar-item");

            menuItems.forEach(item => {
                item.addEventListener("click", function() {
                    // Xóa border của tất cả các item
                    menuItems.forEach(i => i.classList.remove("border-l-4", "border-indigo-500"));

                    // Thêm border cho item được chọn
                    this.classList.add("border-l-4", "border-indigo-500");
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>