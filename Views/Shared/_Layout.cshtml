@* 
    Views/Shared/_Layout.cshtml 
    Layout chính với sidebar cố định bên trái
*@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ứng Dụng Của Tôi</title>
    <link rel="stylesheet" href="/css/style.css"/>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>


</head>
<body class="bg-gray-100 ">
    <div class="flex h-screen overflow-hidden ">
        <!-- Sidebar -->
        <aside class="w-64 bg-gradient-to-b from-gray-900 to-gray-800 text-gray-200 flex flex-col shadow-2xl side-bar min-h-screen shadow-[0_5px_20px_rgba(255,255,255,0.8)]">
            <!-- Header / Logo -->
            <div class="p-5 bg-gray-950 flex items-center justify-center border-b border-gray-700">
                <img src="/assets/project.png" class="w-11 h-11 mr-3"/>
                <h1 class="text-lg font-bold tracking-wide text-white uppercase">Quản Lý Dự Án</h1>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 overflow-y-auto px-3 py-5 space-y-2">
                <!-- Item -->
                <a asp-controller="Home" asp-action="Index"
                   class="flex items-center p-3 border-b-4 border-indigo-500 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="home" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Tổng quan</span>
                </a>

                <a asp-controller="#" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="Building" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Phòng ban</span>
                </a>

                <a asp-controller="/" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="Users" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Nhân viên</span>
                </a>

                <a asp-controller="/" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="folder-git-2" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Dự án</span>
                </a>

                <a asp-controller="Task" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="clipboard-list" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Nhiệm vụ</span>
                </a>

                <a asp-controller="/" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="settings" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Cài đặt</span>
                </a>
            </nav>

            <!-- Footer -->
            <div class="p-4 border-t border-gray-700 text-sm text-gray-400 text-center">
                © 2025 Quản Lý Pro
            </div>
        </aside>


        <!-- Main Content Area -->
        <main class="main-content flex-1 overflow-y-auto divide-y divide-gray-700 scroll-smooth bg-gradient-to-b from-gray-950 to-gray-900 text-gray-200 shadow-inner relative ">
            <!-- Header -->
            <header class="bg-gray-900 border-b border-gray-700 shadow-md sticky top-0 z-50">
                <div class="px-6 py-4 flex items-center justify-between">
                    <h2 class="text-2xl font-semibold text-white tracking-wide">
                        @ViewData["Title"]
                    </h2>

                    <!-- Action buttons -->
                    <div class="flex items-center space-x-3 relative">
                        <!-- Nút Thêm mới -->
                        <div class="relative group inline-block">
                            <button id="addButton"
                                    class="flex items-center gap-2 px-5 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 transition-all shadow-md">
                                <i data-lucide="plus" class="w-5 h-5 text-gray-300 group-hover:text-white"></i>
                                <span class="text-sm text-gray-200 group-hover:text-white font-medium">Thêm mới</span>
                            </button>

                            <!-- Tooltip -->
                            <span class="absolute -bottom-10 left-1/2 -translate-x-1/2 bg-gray-900 text-white text-xs rounded-md px-2 py-1 opacity-0 scale-90 group-hover:opacity-100 group-hover:scale-100 transition-all duration-200 whitespace-nowrap shadow-lg">
                                Thêm một mục mới
                            </span>
                        </div>

                        <!-- Notify -->
                        <div class="relative">
                            <button id="notifyButton"
                                    class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-800 hover:bg-indigo-600 transition-all shadow-md relative">
                                <i data-lucide="bell" class="w-5 h-5 text-gray-300"></i>

                                <!-- Badge -->
                                <span id="notifyBadge"
                                      class="absolute -top-1.5 -right-1.5 bg-red-600 text-white text-xs font-bold w-5 h-5 flex items-center justify-center rounded-full border-2 border-gray-900 shadow-sm">
                                    3
                                </span>
                            </button>

                            <!-- Notification Dropdown -->
                            <div id="notifyDropdown"
                                 class="absolute right-0 mt-3 w-80 bg-gray-800 border border-gray-700 rounded-lg shadow-lg z-50 opacity-0 scale-95 pointer-events-none transition-all duration-200 ease-out transform origin-top-right">
                                <div class="px-4 py-3 border-b border-gray-700 flex justify-between items-center">
                                    <h3 class="text-sm font-semibold text-gray-100">Thông báo</h3>
                                    <button id="clearNotify" class="text-xs text-indigo-400 hover:text-indigo-300 transition">
                                        Đánh dấu là đã đọc
                                    </button>
                                </div>

                                <div class="relative max-h-80 overflow-y-auto" id="notifyDropdownContainer">
                                    <ul class="max-h-80 overflow-y-auto divide-y divide-gray-700 scroll-smooth">
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3 unread cursor-pointer">
                                            <div class="relative">
                                                <i data-lucide="alert-circle" class="w-5 h-5 text-indigo-400 mt-0.5"></i>
                                                <span class="absolute -top-1 -right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                                            </div>
                                            <div>
                                                <p class="text-sm text-gray-200">Hệ thống sẽ bảo trì vào lúc 22:00 tối nay.</p>
                                                <span class="text-xs text-gray-400">10 phút trước</span>
                                            </div>
                                        </li>
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3 unread cursor-pointer">
                                            <div class="relative">
                                                <i data-lucide="user-plus" class="w-5 h-5 text-green-400 mt-0.5"></i>
                                                <span class="absolute -top-1 -right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                                            </div>
                                            <div>
                                                <p class="text-sm text-gray-200">Người dùng mới vừa đăng ký: <b>Nguyễn Văn A</b>.</p>
                                                <span class="text-xs text-gray-400">30 phút trước</span>
                                            </div>
                                        </li>

                                        <!-- Các thông báo đã đọc (không có class unread, không có chấm đỏ) -->
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3 cursor-pointer">
                                            <i data-lucide="check-circle-2" class="w-5 h-5 text-blue-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-300">Dự án “Quản lý công việc” đã được hoàn thành.</p>
                                                <span class="text-xs text-gray-500">1 giờ trước</span>
                                            </div>
                                        </li>
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="message-square" class="w-5 h-5 text-yellow-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Bạn có tin nhắn mới từ <b>Phòng Kỹ thuật</b>.</p>
                                                <span class="text-xs text-gray-400">2 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="calendar-days" class="w-5 h-5 text-pink-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Cuộc họp định kỳ sẽ diễn ra vào lúc <b>9:00 sáng mai</b>.</p>
                                                <span class="text-xs text-gray-400">3 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="upload-cloud" class="w-5 h-5 text-cyan-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Tệp báo cáo tháng 10 đã được tải lên thành công.</p>
                                                <span class="text-xs text-gray-400">5 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="alert-triangle" class="w-5 h-5 text-red-500 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Phát hiện lỗi đồng bộ dữ liệu trong hệ thống.</p>
                                                <span class="text-xs text-gray-400">6 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="star" class="w-5 h-5 text-amber-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Chúc mừng! Bạn đã đạt danh hiệu <b>Nhân viên xuất sắc tuần này</b>.</p>
                                                <span class="text-xs text-gray-400">8 giờ trước</span>
                                            </div>
                                        </li>
                                    </ul>

                                    <div class="absolute bottom-0 left-0 w-full h-6 bg-gradient-to-t from-gray-900 to-transparent pointer-events-none"></div>
                                </div>
                            </div>
                        </div>

                        <!-- User -->
                        <div class="relative">
                            <button id="userMenuButton"
                                    class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-800 hover:bg-indigo-600 transition-all shadow-md">
                                <i data-lucide="user" class="w-5 h-5 text-gray-300"></i>
                            </button>

                            <!-- Dropdown -->
                            <div id="userDropdown"
                                 class="absolute right-0 mt-3 w-44 bg-gray-800 border border-gray-700 rounded-lg shadow-lg z-50 opacity-0 scale-95 pointer-events-none transition-all duration-200 ease-out transform origin-top-right">
                                <ul class="py-2 text-sm text-gray-200">
                                    <li>
                                        <a href="#"
                                           class="flex items-center px-4 py-2 hover:bg-indigo-600 hover:text-white transition">
                                            <i data-lucide="key-round" class="w-4 h-4 mr-2"></i>
                                            Đổi mật khẩu
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#"
                                           class="flex items-center px-4 py-2 hover:bg-indigo-600 hover:text-white transition">
                                            <i data-lucide="log-out" class="w-4 h-4 mr-2"></i>
                                            Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <div class="p-6 bg-gray-900/60 rounded-b-xl backdrop-blur-md">
                @RenderBody()
            </div>
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    <script>lucide.createIcons();</script>
    <script src="/js/site.js"></script>
</body>
</html>