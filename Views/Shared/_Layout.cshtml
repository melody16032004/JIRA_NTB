@* 
    Views/Shared/_Layout.cshtml 
    Layout chính với sidebar cố định bên trái
*@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ứng Dụng Của Tôi</title>
    <link rel="stylesheet" href="/css/style.css"/>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>


</head>
<body class="bg-gray-100 ">
    <div class="flex h-screen overflow-hidden ">
        <!-- Sidebar -->
        <aside class="w-64 bg-gradient-to-b from-gray-900 to-gray-800 text-gray-200 flex flex-col shadow-2xl side-bar min-h-screen shadow-[0_5px_20px_rgba(255,255,255,0.8)]">
            <!-- Header / Logo -->
            <div class="p-5 bg-gray-950 flex items-center justify-center border-b border-gray-700">
                <img src="/assets/project.png" class="w-11 h-11 mr-3"/>
                <h1 class="text-lg font-bold tracking-wide text-white uppercase">Quản Lý Dự Án</h1>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 overflow-y-auto px-3 py-5 space-y-2">
                <!-- Item -->
                <a asp-controller="Home" asp-action="Index"
                   class="flex items-center p-3 border-b-4 border-indigo-500 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="home" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Tổng quan</span>
                </a>

                <a asp-controller="#" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="Building" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Phòng ban</span>
                </a>

                <a asp-controller="/" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="Users" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Nhân viên</span>
                </a>

                <a asp-controller="Project" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="folder-git-2" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Dự án</span>
                </a>

                <a asp-controller="Task" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="clipboard-list" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Nhiệm vụ</span>
                </a>

                <a asp-controller="/" asp-action="Index"
                   class="flex items-center p-3 rounded-lg hover:bg-indigo-600 hover:text-white transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center bg-gray-700 rounded-lg group-hover:bg-indigo-500">
                        <i data-lucide="settings" class="w-4 h-4"></i>
                    </div>
                    <span class="ml-3 font-medium">Cài đặt</span>
                </a>
            </nav>

            <!-- Footer -->
            <div class="p-4 border-t border-gray-700 text-sm text-gray-400 text-center">
                © 2025 Quản Lý Pro
            </div>
        </aside>


        <!-- Main Content Area -->
        <main class="main-content flex-1 overflow-y-auto divide-y divide-gray-700 scroll-smooth bg-gradient-to-b from-gray-950 to-gray-900 text-gray-200 shadow-inner relative ">
            <!-- Header -->
            <header class="bg-gray-900 border-b border-gray-700 shadow-md sticky top-0 z-50">
                <div class="px-6 py-4 flex items-center justify-between">
                    <h2 class="text-2xl font-semibold text-white tracking-wide">
                        @ViewData["Title"]
                    </h2>

                    <!-- Action buttons -->
                    <div class="flex items-center space-x-3 relative">
                        <!-- Notify -->
                        <div class="relative group">
                            <button id="notifyButton"
                                    class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-800 hover:bg-indigo-600 transition-all shadow-md relative">
                                <i data-lucide="bell" class="w-5 h-5 text-gray-300"></i>

                                <!-- Badge -->
                                <span id="notifyBadge"
                                      class="absolute -top-1.5 -right-1.5 bg-red-600 text-white text-xs font-bold w-5 h-5 flex items-center justify-center rounded-full border-2 border-gray-900 shadow-sm">
                                    3
                                </span>
                            </button>

                            <!-- Tooltip -->
                            <span class="absolute -bottom-10 left-1/2 -translate-x-1/2 bg-gray-900 text-white text-xs rounded-md px-2 py-1 opacity-0 scale-90 group-hover:opacity-100 group-hover:scale-100 transition-all duration-200 whitespace-nowrap shadow-lg">
                                Thông báo
                            </span>

                            <!-- Notification Dropdown -->
                            <div id="notifyDropdown"
                                 class="absolute right-0 mt-3 w-80 bg-gray-800 border border-gray-700 rounded-lg shadow-lg z-50 opacity-0 scale-95 pointer-events-none transition-all duration-200 ease-out transform origin-top-right">
                                <div class="px-4 py-3 border-b border-gray-700 flex justify-between items-center">
                                    <h3 class="text-sm font-semibold text-gray-100">Thông báo</h3>
                                    <button id="clearNotify" class="text-xs text-indigo-400 hover:text-indigo-300 transition">
                                        Đánh dấu là đã đọc
                                    </button>
                                </div>

                                <div class="relative max-h-80 overflow-y-auto" id="notifyDropdownContainer">
                                    <ul class="max-h-80 overflow-y-auto divide-y divide-gray-700 scroll-smooth">
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3 unread cursor-pointer">
                                            <div class="relative">
                                                <i data-lucide="alert-circle" class="w-5 h-5 text-indigo-400 mt-0.5"></i>
                                                <span class="absolute -top-1 -right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                                            </div>
                                            <div>
                                                <p class="text-sm text-gray-200">Hệ thống sẽ bảo trì vào lúc 22:00 tối nay.</p>
                                                <span class="text-xs text-gray-400">10 phút trước</span>
                                            </div>
                                        </li>
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3 unread cursor-pointer">
                                            <div class="relative">
                                                <i data-lucide="user-plus" class="w-5 h-5 text-green-400 mt-0.5"></i>
                                                <span class="absolute -top-1 -right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                                            </div>
                                            <div>
                                                <p class="text-sm text-gray-200">Người dùng mới vừa đăng ký: <b>Nguyễn Văn A</b>.</p>
                                                <span class="text-xs text-gray-400">30 phút trước</span>
                                            </div>
                                        </li>

                                        <!-- Các thông báo đã đọc (không có class unread, không có chấm đỏ) -->
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3 cursor-pointer">
                                            <i data-lucide="check-circle-2" class="w-5 h-5 text-blue-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-300">Dự án “Quản lý công việc” đã được hoàn thành.</p>
                                                <span class="text-xs text-gray-500">1 giờ trước</span>
                                            </div>
                                        </li>
                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="message-square" class="w-5 h-5 text-yellow-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Bạn có tin nhắn mới từ <b>Phòng Kỹ thuật</b>.</p>
                                                <span class="text-xs text-gray-400">2 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="calendar-days" class="w-5 h-5 text-pink-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Cuộc họp định kỳ sẽ diễn ra vào lúc <b>9:00 sáng mai</b>.</p>
                                                <span class="text-xs text-gray-400">3 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="upload-cloud" class="w-5 h-5 text-cyan-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Tệp báo cáo tháng 10 đã được tải lên thành công.</p>
                                                <span class="text-xs text-gray-400">5 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="alert-triangle" class="w-5 h-5 text-red-500 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Phát hiện lỗi đồng bộ dữ liệu trong hệ thống.</p>
                                                <span class="text-xs text-gray-400">6 giờ trước</span>
                                            </div>
                                        </li>

                                        <li class="p-3 hover:bg-gray-700/50 transition flex items-start space-x-3">
                                            <i data-lucide="star" class="w-5 h-5 text-amber-400 mt-0.5"></i>
                                            <div>
                                                <p class="text-sm text-gray-200">Chúc mừng! Bạn đã đạt danh hiệu <b>Nhân viên xuất sắc tuần này</b>.</p>
                                                <span class="text-xs text-gray-400">8 giờ trước</span>
                                            </div>
                                        </li>
                                    </ul>

                                    <div class="absolute bottom-0 left-0 w-full h-6 bg-gradient-to-t from-gray-900 to-transparent pointer-events-none"></div>
                                </div>
                            </div>
                        </div>

                        <!-- User -->
                        <div class="relative group">
                            <button id="userMenuButton"
                                    class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-800 hover:bg-indigo-600 transition-all shadow-md">
                                <i data-lucide="user" class="w-5 h-5 text-gray-300"></i>
                            </button>

                            <!-- Tooltip -->
                            <span class="absolute -bottom-10 left-1/2 -translate-x-1/2 bg-gray-900 text-white text-xs rounded-md px-2 py-1 opacity-0 scale-90 group-hover:opacity-100 group-hover:scale-100 transition-all duration-200 whitespace-nowrap shadow-lg">
                                Người dùng
                            </span>

                            <!-- Dropdown -->
                            <div id="userDropdown"
                                 class="absolute right-0 mt-3 w-56 bg-gray-800 border border-gray-700 rounded-lg shadow-lg z-50 opacity-0 scale-95 pointer-events-none transition-all duration-200 ease-out transform origin-top-right">

                                @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <!-- Hiển thị khi ĐÃ đăng nhập -->
                                    <div class="px-4 py-3 border-b border-gray-700 text-sm text-gray-200">
                                        <div class="font-medium">@User.Identity.Name</div>
                                        <div class="text-xs text-gray-400">Đã đăng nhập</div>
                                    </div>
                                    <ul class="py-2 text-sm text-gray-200">
                                        <li>
                                            <!-- Form POST cho Logout (bắt buộc dùng POST, không dùng GET) -->
                                            <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="w-full text-left flex items-center px-4 py-2 hover:bg-indigo-600 hover:text-white transition bg-transparent border-0">
                                                    <i data-lucide="log-out" class="w-4 h-4 mr-2"></i>
                                                    Thông tin tài khoản
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <a asp-controller="Account" asp-action="ChangePassword"
                                               class="flex items-center px-4 py-2 hover:bg-indigo-600 hover:text-white transition">
                                                <i data-lucide="key-round" class="w-4 h-4 mr-2"></i>
                                                Đổi mật khẩu
                                            </a>
                                        </li>
                                        <li>
                                            <!-- Form POST cho Logout (bắt buộc dùng POST, không dùng GET) -->
                                            <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="w-full text-left flex items-center px-4 py-2 hover:bg-indigo-600 hover:text-white transition bg-transparent border-0">
                                                    <i data-lucide="log-out" class="w-4 h-4 mr-2"></i>
                                                    Đăng xuất
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                }
                                else
                                {
                                    <!-- Hiển thị khi CHƯA đăng nhập -->
                                    <ul class="py-2 text-sm text-gray-200">
                                        <li>
                                            <a asp-controller="Account" asp-action="Login"
                                               class="flex items-center px-4 py-2 hover:bg-indigo-600 hover:text-white transition">
                                                <i data-lucide="log-in" class="w-4 h-4 mr-2"></i>
                                                Đăng nhập
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Account" asp-action="Register"
                                               class="flex items-center px-4 py-2 hover:bg-indigo-600 hover:text-white transition">
                                                <i data-lucide="user-plus" class="w-4 h-4 mr-2"></i>
                                                Đăng ký
                                            </a>
                                        </li>
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <div class="p-4 bg-gray-900/60 rounded-b-xl backdrop-blur-md">
                @RenderBody()
            </div>
        </main>
    </div>


    <!-- Overlay tối nền -->
    <div id="uploadOverlay" class="fixed inset-0 bg-black/80 hidden z-40"></div>
    <!-- Modal chính giữa -->
    <div id="uploadModal" class="fixed inset-0 flex items-center justify-center hidden z-50">
        <div class="w-[650px] bg-gray-900 rounded-xl border border-gray-700 shadow-[0_0_60px_rgba(0,0,0,0.8)] p-7 relative">
            <!-- Nút đóng -->
            <button onclick="closeUploadModal()" class="absolute top-3 right-3 text-gray-400 hover:text-white transition">
                <i data-lucide="x" class="w-5 h-5"></i>
            </button>

            <!-- Tiêu đề -->
            <h3 class="text-xl font-semibold text-white mb-6 flex items-center gap-2">
                <i data-lucide="file-plus" class="w-5 h-5 text-indigo-400"></i>
                Thêm File
            </h3>

            <!-- Hai cột -->
            <div class="flex gap-6">
                <!-- Cột trái: Upload -->
                <form id="uploadForm" class="flex flex-col gap-4 w-1/2">
                    <!-- Vùng chọn file -->
                    <label id="dropZone" for="fileInput"
                           class="cursor-pointer flex flex-col items-center justify-center gap-3 p-6 border-2 border-dashed border-indigo-500 rounded-lg hover:bg-indigo-600/10 transition-all text-center text-indigo-300">
                        <i data-lucide="upload" class="w-7 h-7 text-indigo-400"></i>
                        <span class="font-medium text-white">Nhấp hoặc kéo tệp vào đây</span>
                        <span class="text-xs text-indigo-300">Hỗ trợ: PDF, DOC, DOCX, PNG, JPG, JPEG</span>
                    </label>

                    <input type="file" id="fileInput" class="hidden" accept=".pdf,.doc,.docx,.png,.jpg,.jpeg,.xls,.xlsx" />

                    <!-- Tên file -->
                    <p id="fileName" class="text-sm text-indigo-300"></p>

                    <!-- Nút Upload -->
                    <button type="submit"
                            class="mt-3 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-lg text-white font-medium shadow-md transition-all">
                        Tải lên
                    </button>
                </form>

                <!-- Cột phải: Preview -->
                <div id="previewContainer"
                     class="w-1/2 rounded-lg border border-gray-700 p-3 bg-gray-800 max-h-[300px] overflow-auto text-white flex items-center justify-center">
                    <p class="text-gray-400 text-sm text-center">Preview File</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal form add/update task -->
    <div id="updateTaskModal" class="fixed inset-0 flex items-center justify-center hidden z-50 -bottom-[50px]">
        <div class="bg-gray-900 w-[1000px] p-8 rounded-2xl shadow-[0_0_100px_rgba(0,0,0,0.8)] border border-gray-700 relative animate-fadeIn max-h-[85vh] overflow-y-auto">

            <!-- Nút đóng -->
            <button id="closeUpdateTaskBtn" class="absolute top-3 right-3 text-gray-400 hover:text-white transition">
                <i data-lucide="x" class="w-5 h-5"></i>
            </button>

            <h3 class="text-xl font-semibold text-white mb-6 flex items-center gap-2">
                <i data-lucide="edit-3" class="w-6 h-6 text-indigo-400"></i>
                Nhiệm vụ
            </h3>

            <form id="updateTaskForm" class="grid grid-cols-2 gap-6">
                <!-- Cột trái -->
                <div class="flex flex-col gap-4">
                    <div>
                        <label class="block text-xs text-gray-300 mb-2">Tên nhiệm vụ</label>
                        <input id="taskName" type="text"
                               class="w-full px-4 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white text-xs focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                               placeholder="Nhập tên task..." />
                    </div>

                    <div>
                        <label class="block text-xs text-gray-300 mb-2">Người nhận nhiệm vụ</label>
                        <input id="taskAssignee" type="text"
                               class="w-full px-4 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white text-xs focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                               placeholder="Nhập tên người nhận..." />
                    </div>

                    <div>
                        <label class="block text-xs text-gray-300 mb-2">Mô tả</label>
                        <textarea id="taskDesc" rows="5"
                                  class="w-full px-4 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white text-xs focus:ring-2 focus:ring-indigo-500 focus:outline-none resize-none"
                                  placeholder="Nhập mô tả..."></textarea>
                    </div>
                </div>

                <!-- Cột phải -->
                <div class="flex flex-col gap-4">
                    <div class="flex gap-4">
                        <div class="flex-1 relative">
                            <label class="block text-xs text-gray-300 mb-1">Ngày bắt đầu</label>
                            <input id="taskStart" type="date"
                                   class="w-full px-4 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white text-xs focus:ring-2 focus:ring-indigo-500 focus:outline-none appearance-none pr-10" />
                            <i data-lucide="calendar" class="absolute right-10 top-8 text-gray-400 pointer-events-none w-4 h-4"></i>
                        </div>

                        <div class="flex-1 relative">
                            <label class="block text-xs text-gray-300 mb-1">Ngày kết thúc</label>
                            <input id="taskEnd" type="date"
                                   class="w-full px-4 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white text-xs focus:ring-2 focus:ring-indigo-500 focus:outline-none appearance-none pr-10" />
                            <i data-lucide="calendar" class="absolute right-10 top-8 text-gray-400 pointer-events-none w-4 h-4"></i>
                        </div>
                    </div>

                    <div class="flex gap-4">
                        <!-- Trạng thái -->
                        <div class="flex-1">
                            <label class="block text-xs text-gray-300 mb-2 font-medium">Trạng thái</label>
                            <div class="relative group">
                                <select id="taskStatus"
                                        class="appearance-none w-full px-4 text-xs py-2.5 rounded-xl bg-gray-800/80 border border-gray-700 text-gray-200 font-medium focus:ring-2 focus:ring-indigo-500 outline-none transition-all hover:bg-gray-800/90 cursor-pointer">
                                    <option>Chưa bắt đầu</option>
                                    <option>Đang thực hiện</option>
                                    <option>Hoàn thành</option>
                                    <option>Trễ hạn</option>
                                </select>
                                <div class="absolute inset-y-0 right-3 flex items-center pointer-events-none text-gray-400">
                                    <i data-lucide="chevron-down" class="w-4 h-4"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Ưu tiên -->
                        <div class="flex-1">
                            <label class="block text-xs text-gray-300 mb-2 font-medium">Độ ưu tiên</label>
                            <div class="relative group">
                                <select id="taskPriority"
                                        class="appearance-none w-full px-4 text-xs py-2.5 rounded-xl bg-gray-800/80 border border-gray-700 text-gray-200 font-medium focus:ring-2 focus:ring-indigo-500 outline-none transition-all hover:bg-gray-800/90 cursor-pointer">
                                    <option>Thấp</option>
                                    <option>Trung bình</option>
                                    <option>Cao</option>
                                    <option>Khẩn cấp</option>
                                </select>
                                <div class="absolute inset-y-0 right-3 flex items-center pointer-events-none text-gray-400">
                                    <i data-lucide="chevron-down" class="w-4 h-4"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Upload + Preview -->
                    <div class="flex gap-4 items-stretch">
                        <div class="flex flex-col w-1/3">
                            <label id="dropZone" for="fileInputEdit"
                                   class="cursor-pointer flex flex-col items-center justify-center gap-3 flex-1 p-6 border-2 border-dashed border-indigo-500 rounded-lg hover:bg-indigo-600/10 transition-all text-center text-indigo-300">
                                <i data-lucide="upload" class="w-7 h-7 text-indigo-400"></i>
                                <span class="font-medium text-white text-xs">Chọn để thêm tệp</span>
                                <span class="text-xs text-indigo-300">PDF, DOCX, XLSX, PNG...</span>
                            </label>
                            <input type="file" id="fileInputEdit" class="hidden" accept=".pdf,.doc,.docx,.png,.jpg,.jpeg,.xls,.xlsx" />

                            <p id="fileNameEdit"
                               class="text-sm text-indigo-300 mt-1 truncate overflow-hidden text-ellipsis whitespace-nowrap flex items-center justify-start w-48">
                            </p>
                        </div>

                        <div id="previewContainerEdit"
                             class="w-2/3 rounded-[10px] border border-indigo-700 overflow-hidden p-6 bg-gray-800 max-h-[200px] h-[200px] overflow-auto text-white flex items-center justify-center">
                            <p class="text-gray-400 text-sm text-center">Preview File</p>
                        </div>
                    </div>

                    <!-- Nút submit -->
                    <div class="flex justify-end mt-4">
                        <button type="submit"
                                class="px-5 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-lg text-white text-xs font-medium shadow-md transition-all">
                            Xác nhận
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Modal form add/update Project -->
    <div id="updateProjectModal" class="fixed inset-0 flex items-center justify-center hidden z-50 -bottom-[50px]">
        <div class="bg-gray-900 w-[1000px] p-8 rounded-2xl shadow-[0_0_100px_rgba(0,0,0,0.8)] border border-gray-700 relative animate-fadeIn max-h-[85vh] overflow-y-auto">

            <!-- Nút đóng -->
            <button id="closeUpdateProjectBtn" class="absolute top-3 right-3 text-gray-400 hover:text-white transition">
                <i data-lucide="x" class="w-5 h-5"></i>
            </button>

            <h3 class="text-xl font-semibold text-white mb-6 flex items-center gap-2">
                <i data-lucide="edit-3" class="w-6 h-6 text-indigo-400"></i>
                Dự án
            </h3>

            <form id="updateProjectForm" class="grid grid-cols-2 gap-6">
                <!-- Cột trái -->
                <div class="flex flex-col gap-4">
                    <div>
                        <label class="block text-xs text-gray-300 mb-1">Tên nhiệm vụ</label>
                        <input id="projectName" type="text"
                               class="w-full px-4 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white text-xs focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                               placeholder="Nhập tên project..." />
                    </div>

                    <div>
                        <label class="block text-xs text-gray-300 mb-1">Người nhận nhiệm vụ</label>
                        <input id="projectAssignee" type="text"
                               class="w-full px-4 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white text-xs focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                               placeholder="Nhập tên người quản lý..." />
                    </div>

                    <div>
                        <label class="block text-xs text-gray-300 mb-1">Mô tả</label>
                        <textarea id="projectDesc" rows="5"
                                  class="w-full px-4 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white text-xs focus:ring-2 focus:ring-indigo-500 focus:outline-none resize-none"
                                  placeholder="Nhập mô tả..."></textarea>
                    </div>
                </div>

                <!-- Cột phải -->
                <div class="flex flex-col gap-4">
                    <div class="flex gap-4">
                        <div class="flex-1 relative">
                            <label class="block text-xs text-gray-300 mb-1">Ngày bắt đầu</label>
                            <input id="projectStart" type="date"
                                   class="w-full px-4 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white text-xs focus:ring-2 focus:ring-indigo-500 focus:outline-none appearance-none pr-10" />
                            <i data-lucide="calendar" class="absolute right-10 top-8 text-gray-400 pointer-events-none w-4 h-4"></i>
                        </div>

                        <div class="flex-1 relative">
                            <label class="block text-xs text-gray-300 mb-1">Ngày kết thúc</label>
                            <input id="projectEnd" type="date"
                                   class="w-full px-4 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white text-xs focus:ring-2 focus:ring-indigo-500 focus:outline-none appearance-none pr-10" />
                            <i data-lucide="calendar" class="absolute right-10 top-8 text-gray-400 pointer-events-none w-4 h-4"></i>
                        </div>
                    </div>

                    <div class="flex gap-4">
                        <!-- Trạng thái -->
                        <div class="flex-1">
                            <label class="block text-xs text-gray-300 mb-2 font-medium">Trạng thái</label>
                            <div class="relative group">
                                <select id="projectStatus"
                                        class="appearance-none w-full px-4 text-xs py-2.5 rounded-xl bg-gray-800/80 border border-gray-700 text-gray-200 font-medium focus:ring-2 focus:ring-indigo-500 outline-none transition-all hover:bg-gray-800/90 cursor-pointer">
                                    <option>Chưa bắt đầu</option>
                                    <option>Đang thực hiện</option>
                                    <option>Hoàn thành</option>
                                    <option>Trễ hạn</option>
                                </select>
                                <div class="absolute inset-y-0 right-3 flex items-center pointer-events-none text-gray-400">
                                    <i data-lucide="chevron-down" class="w-4 h-4"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Upload + Preview -->
                    <div class="flex gap-4 items-stretch">
                        <div class="flex flex-col w-1/3">
                            <label id="dropZoneProject" for="fileInputEditProject"
                                   class="cursor-pointer flex flex-col items-center justify-center gap-3 flex-1 p-6 border-2 border-dashed border-indigo-500 rounded-lg hover:bg-indigo-600/10 transition-all text-center text-indigo-300">
                                <i data-lucide="upload" class="w-7 h-7 text-indigo-400"></i>
                                <span class="font-medium text-white text-xs">Chọn để thêm tệp</span>
                                <span class="text-xs text-indigo-300">PDF, DOCX, XLSX, PNG...</span>
                            </label>
                            <input type="file" id="fileInputEditProject" class="hidden" accept=".pdf,.doc,.docx,.png,.jpg,.jpeg,.xls,.xlsx" />

                            <p id="fileNameEditProject"
                               class="text-sm text-indigo-300 mt-1 truncate overflow-hidden text-ellipsis whitespace-nowrap flex items-center justify-start w-48">
                            </p>
                        </div>

                        <div id="previewContainerEditProject"
                             class="w-2/3 rounded-[10px] border border-indigo-700 overflow-hidden p-6 bg-gray-800 max-h-[200px] h-[200px] overflow-auto text-white flex items-center justify-center">
                            <p class="text-gray-400 text-sm text-center">Preview File</p>
                        </div>
                    </div>

                    <!-- Nút submit -->
                    <div class="flex justify-end mt-4">
                        <button type="submit"
                                class="px-5 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-lg text-white text-xs font-medium shadow-md transition-all">
                            Xác nhận
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>


    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>lucide.createIcons();</script>
    <script src="/js/site.js"></script>
</body>
</html>