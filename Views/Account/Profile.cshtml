@model JIRA_NTB.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="max-w-7xl mx-auto">
    @* Success Message *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 bg-green-900/50 border-l-4 border-green-500 p-3 rounded-lg backdrop-blur-sm animate-fade-in">
            <div class="flex items-center gap-2">
                <i data-lucide="check-circle" class="w-4 h-4 text-green-400"></i>
                <p class="text-green-200 text-sm font-medium">@TempData["SuccessMessage"]</p>
            </div>
        </div>
    }

    @* Main Content *@
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
        @* Avatar Section *@
        <div class="lg:col-span-1">
            <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700 p-4">
                <div class="text-center">
                    <div class="relative inline-block">
                        @if (!string.IsNullOrEmpty(Model.CurrentAvatarPath))
                        {
                            <img src="@Model.CurrentAvatarPath" 
                                 alt="Avatar" 
                                 class="w-28 h-28 rounded-full object-cover border-3 border-indigo-500 shadow-lg mx-auto" />
                        }
                        else
                        {
                            <div class="w-28 h-28 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center border-3 border-indigo-500 shadow-lg mx-auto">
                                <i data-lucide="user" class="w-14 h-14 text-white"></i>
                            </div>
                        }
                        <div class="absolute bottom-1 right-1 bg-green-500 w-5 h-5 rounded-full border-3 border-gray-800"></div>
                    </div>
                    
                    <h2 class="text-lg font-bold text-white mt-3">@Model.FullName</h2>
                    <p class="text-gray-400 flex items-center justify-center gap-1 mt-1 text-xs">
                        <i data-lucide="mail" class="w-3 h-3"></i>
                        @Model.Email
                    </p>
                    <div class="mt-3 inline-flex items-center gap-1.5 px-3 py-1.5 bg-indigo-900/50 text-indigo-300 rounded-full text-xs font-medium border border-indigo-700">
                        <i data-lucide="briefcase" class="w-3 h-3"></i>
                        @Model.DepartmentName
                    </div>
                </div>

                @* Quick Stats *@
                <div class="mt-4 pt-4 border-t border-gray-700 space-y-2">
                    <div class="flex items-center justify-between text-xs">
                        <span class="text-gray-400 flex items-center gap-1.5">
                            <i data-lucide="calendar" class="w-3 h-3"></i>
                            Ngày sinh
                        </span>
                        <span class="font-medium text-gray-200">
                            @(Model.Dob?.ToString("dd/MM/yyyy") ?? "Chưa có")
                        </span>
                    </div>
                    <div class="flex items-center justify-between text-xs">
                        <span class="text-gray-400 flex items-center gap-1.5">
                            <i data-lucide="users" class="w-3 h-3"></i>
                            Giới tính
                        </span>
                        <span class="font-medium text-gray-200">
                            @(string.IsNullOrEmpty(Model.Gender) ? "Chưa có" : Model.Gender)
                        </span>
                    </div>
                </div>
            </div>
        </div>

        @* Form Section *@
        <div class="lg:col-span-3">
            <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700 p-8">
                <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2 pb-3 border-b border-gray-700">
                    <i data-lucide="edit-3" class="w-5 h-5 text-indigo-400"></i>
                    Chỉnh sửa thông tin
                </h3>

                <form asp-action="Profile" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="mb-3 p-3 bg-red-900/30 border-l-4 border-red-500 rounded-lg text-red-300 text-sm"></div>

                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                        @* Email - Read Only *@
                        <div>
                            <label class="block text-xs font-semibold text-gray-300 mb-1.5 flex items-center gap-1.5">
                                <i data-lucide="mail" class="w-3.5 h-3.5 text-gray-400"></i>
                                Email
                            </label>
                            <input asp-for="Email" 
                                   class="w-full px-3 py-2 text-sm border border-gray-600 rounded-lg bg-gray-900/50 text-gray-400 cursor-not-allowed" 
                                   readonly />
                            <p class="mt-1 text-xs text-gray-500">Email không thể thay đổi</p>
                        </div>

                        @* Department - Read Only *@
                        <div>
                            <label class="block text-xs font-semibold text-gray-300 mb-1.5 flex items-center gap-1.5">
                                <i data-lucide="briefcase" class="w-3.5 h-3.5 text-gray-400"></i>
                                Phòng ban
                            </label>
                            <input asp-for="DepartmentName" 
                                   class="w-full px-3 py-2 text-sm border border-gray-600 rounded-lg bg-gray-900/50 text-gray-400 cursor-not-allowed" 
                                   readonly />
                            <p class="mt-1 text-xs text-gray-500">Liên hệ quản trị viên để thay đổi</p>
                        </div>

                        @* Full Name - Editable *@
                        <div>
                            <label class="block text-xs font-semibold text-gray-300 mb-1.5 flex items-center gap-1.5">
                                <i data-lucide="user" class="w-3.5 h-3.5 text-gray-400"></i>
                                Họ và tên
                            </label>
                            <input asp-for="FullName" 
                                   class="w-full px-3 py-2 text-sm border border-gray-600 rounded-lg bg-gray-900/50 text-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" />
                            <span asp-validation-for="FullName" class="text-red-400 text-xs mt-1 block"></span>
                        </div>

                        @* Date of Birth - Editable *@
                        <div>
                            <label class="block text-xs font-semibold text-gray-300 mb-1.5 flex items-center gap-1.5">
                                <i data-lucide="calendar" class="w-3.5 h-3.5 text-gray-400"></i>
                                Ngày sinh
                            </label>
                            <input asp-for="Dob" 
                                   type="date" 
                                   class="w-full px-3 py-2 text-sm border border-gray-600 rounded-lg bg-gray-900/50 text-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" />
                            <span asp-validation-for="Dob" class="text-red-400 text-xs mt-1 block"></span>
                        </div>

                        @* Gender - Editable *@
                        <div>
                            <label class="block text-xs font-semibold text-gray-300 mb-1.5 flex items-center gap-1.5">
                                <i data-lucide="users" class="w-3.5 h-3.5 text-gray-400"></i>
                                Giới tính
                            </label>
                            <select asp-for="Gender" 
                                    class="w-full px-3 py-2 text-sm border border-gray-600 rounded-lg bg-gray-900/50 text-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
                                <option value="">-- Chọn giới tính --</option>
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                                <option value="Khác">Khác</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-red-400 text-xs mt-1 block"></span>
                        </div>

                        @* Avatar Upload *@
                        <div>
                            <label class="block text-xs font-semibold text-gray-300 mb-1.5 flex items-center gap-1.5">
                                <i data-lucide="image" class="w-3.5 h-3.5 text-gray-400"></i>
                                Đổi ảnh đại diện
                            </label>
                            <input asp-for="NewAvatar" 
                                   type="file" 
                                   accept="image/*" 
                                   class="w-full px-3 py-2 text-sm border border-gray-600 rounded-lg bg-gray-900/50 text-gray-200 hover:border-indigo-500 transition-all cursor-pointer file:mr-2 file:py-1.5 file:px-3 file:rounded-md file:border-0 file:text-xs file:font-semibold file:bg-indigo-900/50 file:text-indigo-300 hover:file:bg-indigo-900 file:cursor-pointer" />
                            <p class="mt-1 text-xs text-gray-500 flex items-center gap-1">
                                <i data-lucide="info" class="w-3 h-3"></i>
                                JPG, PNG, GIF (Tối đa 5MB)
                            </p>
                            <span asp-validation-for="NewAvatar" class="text-red-400 text-xs mt-1 block"></span>
                        </div>
                    </div>

                    @* Action Buttons *@
                    <div class="flex gap-3 mt-5 pt-4 border-t border-gray-700">
                        <button type="submit" 
                                class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-4 py-2.5 rounded-lg text-sm font-semibold hover:to-purple-700 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 flex items-center justify-center gap-2">
                            <i data-lucide="save" class="w-4 h-4"></i>
                            Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@* Thêm phần này để kích hoạt validation phía client *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        // Initialize Lucide icons
        lucide.createIcons();
    </script>
}