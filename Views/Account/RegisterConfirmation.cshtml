@{
    ViewData["Title"] = "Đăng ký thành công";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="flex items-center justify-center min-h-screen py-8">
    <div class="w-full max-w-md px-4">
        <div class="bg-gray-800/50 backdrop-blur-xl rounded-xl shadow-2xl border border-gray-700/50 overflow-hidden">
            
            <!-- Header -->
            <div class="bg-gradient-to-r from-purple-600 to-pink-600 p-6 text-center">
                <div class="flex justify-center mb-3">
                    <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center backdrop-blur-sm animate-pulse">
                        <i data-lucide="mail-check" class="w-8 h-8 text-white"></i>
                    </div>
                </div>
                <h2 class="text-2xl font-bold text-white">Kiểm tra email của bạn!</h2>
            </div>

            <!-- Content -->
            <div class="p-6 space-y-4">
                <div class="bg-yellow-500/10 border border-yellow-500/50 rounded-lg p-4">
                    <div class="flex items-start gap-3">
                        <i data-lucide="clock" class="w-5 h-5 text-yellow-400 flex-shrink-0 mt-0.5"></i>
                        <div>
                            <h3 class="text-yellow-400 font-bold text-sm mb-1">⚠️ LƯU Ý QUAN TRỌNG</h3>
                            <p class="text-gray-300 text-xs leading-relaxed">
                                Link xác nhận <span class="text-red-400 font-bold">chỉ có hiệu lực trong 10 phút!</span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="space-y-3">
                    <div class="flex items-start gap-2">
                        <div class="w-6 h-6 bg-purple-600/20 rounded-full flex items-center justify-center flex-shrink-0">
                            <span class="text-purple-400 font-bold text-xs">1</span>
                        </div>
                        <div>
                            <h4 class="text-white font-semibold text-sm">Mở email của bạn</h4>
                            <p class="text-gray-400 text-xs">Kiểm tra hộp thư đến (và spam)</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-2">
                        <div class="w-6 h-6 bg-purple-600/20 rounded-full flex items-center justify-center flex-shrink-0">
                            <span class="text-purple-400 font-bold text-xs">2</span>
                        </div>
                        <div>
                            <h4 class="text-white font-semibold text-sm">Nhấn vào link xác nhận</h4>
                            <p class="text-gray-400 text-xs">Click "Xác nhận Email"</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-2">
                        <div class="w-6 h-6 bg-purple-600/20 rounded-full flex items-center justify-center flex-shrink-0">
                            <span class="text-purple-400 font-bold text-xs">3</span>
                        </div>
                        <div>
                            <h4 class="text-white font-semibold text-sm">Hoàn tất đăng ký</h4>
                            <p class="text-gray-400 text-xs">Đăng nhập vào hệ thống</p>
                        </div>
                    </div>
                </div>

                <div class="bg-red-500/10 border border-red-500/50 rounded-lg p-3">
                    <div class="flex items-start gap-2">
                        <i data-lucide="alert-triangle" class="w-4 h-4 text-red-400 flex-shrink-0 mt-0.5"></i>
                        <p class="text-red-400 text-xs">
                            <strong>Chú ý:</strong> Tài khoản sẽ tự động bị xóa sau 60 giây nếu không xác nhận.
                        </p>
                    </div>
                </div>

                <div class="pt-2 text-center">
                    <a asp-action="Login" 
                       class="inline-flex items-center gap-2 text-purple-400 hover:text-purple-300 text-sm font-medium transition-colors">
                        <i data-lucide="arrow-left" class="w-4 h-4"></i>
                        Quay lại đăng nhập
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
}
