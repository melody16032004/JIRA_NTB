@using JIRA_NTB.Models.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}

<!-- Register Card with modern design -->
<div class="flex items-center justify-center min-h-screen py-4">
    <div class="w-full max-w-md">
        <!-- Card Container -->
        <div class="bg-gray-800/50 backdrop-blur-xl rounded-2xl shadow-2xl border border-gray-700/50 overflow-hidden">
            
            <!-- Header with gradient -->
            <div class="bg-gradient-to-r from-purple-600 to-pink-600 p-3 text-center">
                <h2 class="text-2xl font-bold text-white">Tạo tài khoản mới</h2>
            </div>

            <!-- Form Body -->
            <div class="p-4">

                <form asp-action="Register" method="post" class="space-y-4">
                    
                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="bg-red-500/10 border border-red-500/50 rounded-lg p-3 text-red-400 text-sm"></div>

                    <!-- Department Dropdown -->
                    <div class="space-y-1">
                        <label asp-for="DepartmentId" class="block text-sm font-medium text-gray-200">
                            <i data-lucide="building-2" class="w-4 h-4 inline mr-2"></i>Phòng ban
                        </label>
                        <select asp-for="DepartmentId"
                                asp-items="Model.DepartmentList"
                                class="w-full px-3 py-1.5 pr-10 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-100 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 appearance-none bg-no-repeat bg-right"
                                style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27%239ca3af%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e'); background-position: right 0.75rem center; background-size: 1.25rem;">
                            <option value="" class="bg-gray-900">-- Chọn phòng ban --</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-red-400 text-xs mt-1 block"></span>
                    </div>

                    <!-- FullName Input -->
                    <div class="space-y-1">
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-200">
                            <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>Họ tên
                        </label>
                        <input asp-for="FullName"
                               type="name"
                               class="w-full px-3 py-1.5 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-100 text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                               placeholder="Nguyễn Văn A"
                               autocomplete="user" />
                        <span asp-validation-for="FullName" class="text-red-400 text-xs mt-1 block"></span>
                    </div>

                    <!-- Email Input -->
                    <div class="space-y-1">
                        <label asp-for="Email" class="block text-sm font-medium text-gray-200">
                            <i data-lucide="mail" class="w-4 h-4 inline mr-2"></i>Email
                        </label>
                        <input asp-for="Email" 
                               type="email"
                               class="w-full px-3 py-1.5 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-100 text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                               placeholder="example@email.com" 
                               autocomplete="email" />
                        <span asp-validation-for="Email" class="text-red-400 text-xs mt-1 block"></span>
                    </div>

                    <!-- Password Input -->
                    <div class="space-y-1">
                        <label asp-for="Password" class="block text-sm font-medium text-gray-200">
                            <i data-lucide="key" class="w-4 h-4 inline mr-2"></i>Mật khẩu
                        </label>
                        <div class="relative">
                            <input asp-for="Password" 
                                   type="password"
                                   id="passwordInput"
                                   class="w-full px-3 py-1.5 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-100 text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                                   placeholder="••••••••" 
                                   autocomplete="new-password" />
                            <button type="button" 
                                    onclick="togglePassword('passwordInput', 'eyeIcon1')"
                                    tabindex="-1"
                                    class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-200 transition-colors">
                                <i data-lucide="eye" id="eyeIcon1" class="w-4 h-4"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-red-400 text-xs mt-1 block"></span>
                        
                        <!-- Password Requirements -->
                        <div class="mt-1 space-y-0.5 text-xs">
                            <p id="req-length" class="flex items-center gap-1 text-gray-400 transition-colors duration-200">
                                <i id="icon-length" data-lucide="circle" class="w-3 h-3"></i>
                                Tối thiểu 8 ký tự
                            </p>
                            <p id="req-case" class="flex items-center gap-1 text-gray-400 transition-colors duration-200">
                                <i id="icon-case" data-lucide="circle" class="w-3 h-3"></i>
                                Có chữ hoa và chữ thường
                            </p>
                            <p id="req-number" class="flex items-center gap-1 text-gray-400 transition-colors duration-200">
                                <i id="icon-number" data-lucide="circle" class="w-3 h-3"></i>
                                Có ít nhất 1 chữ số
                            </p>
                        </div>
                    </div>

                    <!-- Confirm Password Input -->
                    <div class="space-y-1">
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-200">
                            <i data-lucide="shield-check" class="w-4 h-4 inline mr-2"></i>Xác nhận mật khẩu
                        </label>
                        <div class="relative">
                            <input asp-for="ConfirmPassword" 
                                   type="password"
                                   id="confirmPasswordInput"
                                   class="w-full px-3 py-1.5 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-100 text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                                   placeholder="••••••••" 
                                   autocomplete="new-password" />
                            <button type="button" 
                                    onclick="togglePassword('confirmPasswordInput', 'eyeIcon2')"
                                    tabindex="-1"
                                    class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-200 transition-colors">
                                <i data-lucide="eye" id="eyeIcon2" class="w-4 h-4"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-red-400 text-xs mt-1 block"></span>
                    </div>

                    <input type="hidden" id="deviceAddressInput" asp-for="DeviceAddress" />

                    <!-- Submit Button -->
                    <button type="submit" 
                            class="w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold py-2.5 px-4 rounded-lg transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg hover:shadow-xl flex items-center justify-center gap-2" 
                            tabindex="-1">
                        <i data-lucide="user-check" class="w-5 h-5"></i>
                        Đăng ký tài khoản
                    </button>
                </form>

                <!-- Divider -->
                <div class="relative my-4">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-700"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-gray-800/50 text-gray-400">Hoặc</span>
                    </div>
                </div>

                <!-- Login Link -->
                <div class="text-center">
                    <p class="text-gray-400 text-xs">
                        Đã có tài khoản? 
                        <a asp-action="Login" class="text-purple-400 hover:text-purple-300 font-medium transition-colors ml-1" tabindex="-1">
                            Đăng nhập ngay
                            <i data-lucide="arrow-right" class="w-4 h-4 inline ml-1"></i>
                        </a>
                    </p>
                </div>
            </div>
        </div>

        <!-- Footer Info -->
        <div class="text-center mt-3 text-gray-400 text-xs">
            <p>© 2025 JIRA NTB. Hệ thống quản lý dự án chuyên nghiệp.</p>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Hàm trợ giúp để cập nhật GIAO DIỆN của một yêu cầu
        function updateRequirement(textId, iconId, isValid)
        {
            const element = document.getElementById(textId);
            const iconElement = document.getElementById(iconId);
            
            if (!element || !iconElement) return;
            
            let newIconName = 'circle';
            let newColor = '#9ca3af'; // gray-400 - Mặc định: Xám

            if (isValid === true) 
            {
                // Hợp lệ: Xanh lá
                newColor = '#22c55e'; // text-green-500
                newIconName = 'check-circle-2';
            }
            else if (isValid === false)
            {
                // Không hợp lệ: Đỏ
                newColor = '#ef4444'; // text-red-500
                newIconName = 'x-circle';
            }
            // isValid === null sẽ giữ nguyên màu xám và icon circle
            
            element.style.color = newColor;
            iconElement.setAttribute('data-lucide', newIconName);
        }

        // Password validation
        function validatePassword() {
            // Lấy giá trị trực tiếp từ ô input
            const password = document.getElementById('passwordInput').value;

            // Nếu ô input rỗng, reset tất cả về Xám (trạng thái null)
            if (password.length === 0) 
            {
                updateRequirement('req-length', 'icon-length', null);
                updateRequirement('req-case', 'icon-case', null);
                updateRequirement('req-number', 'icon-number', null);
            } 
            else 
            {
                // Nếu có nhập, thì mới bắt đầu kiểm tra Đỏ/Xanh (true/false)

                // 1. Kiểm tra độ dài
                updateRequirement('req-length', 'icon-length', password.length >= 8);

                // 2. Kiểm tra chữ hoa/thường
                const caseRegex = /(?=.*[a-z])(?=.*[A-Z])/;
                updateRequirement('req-case', 'icon-case', caseRegex.test(password));

                // 3. Kiểm tra số
                const numberRegex = /\d/;
                updateRequirement('req-number', 'icon-number', numberRegex.test(password));
            }
            // Vẽ lại icon
            lucide.createIcons();
        }

        // Toggle password visibility
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const eyeIcon = document.getElementById(iconId);
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.setAttribute('data-lucide', 'eye-off');
            } else {
                passwordInput.type = 'password';
                eyeIcon.setAttribute('data-lucide', 'eye');
            }
            
            lucide.createIcons();
        }
    </script>
}

<script>

    // Reinitialize Lucide icons after page load

    document.addEventListener('DOMContentLoaded', async function() {
        const [serverRes, clientRes] = await Promise.all([
            fetch("/api/server/address"),
            fetch("/api/client/address"),
        ]);

        const [server, client] = await Promise.all([
            serverRes.json(),
            clientRes.json()
        ]);
        console.log("Server: ", server);
        console.log("Client: ", client);

        lucide.createIcons();

        // Thêm event listener cho password input để validate realtime
        const passwordInput = document.getElementById('passwordInput');
        if (passwordInput) {
            passwordInput.addEventListener('input', validatePassword);
            passwordInput.addEventListener('keyup', validatePassword);
        }

        console.log("Đang gọi API /api/client/address để lấy MAC...");
        try {
            // 1. Gọi API
            const response = await fetch('/api/client/address');
            if (response.ok) {
                const data = await response.json(); // Nhận về { ip, mac, accessTime }

                // 2. Tìm input ẩn và gán giá trị 'mac' vào
                const macInput = document.getElementById('deviceAddressInput');
                if(macInput) {
                    macInput.value = data.mac;
                    console.log('Lấy MAC thành công (LAN):', data.mac);
                }
            } else {
                // Nếu API lỗi (404, 500)
                console.error('API /api/client/address thất bại:', response.status);
                const macInput = document.getElementById('deviceAddressInput');
                if(macInput) macInput.value = 'API Error';
            }

        } catch (error) {
            // Nếu JavaScript lỗi (server không phản hồi)
            console.error('Lỗi JavaScript khi gọi API:', error);
            const macInput = document.getElementById('deviceAddressInput');
            if(macInput) macInput.value = 'JS Error';
        }
    });
</script>