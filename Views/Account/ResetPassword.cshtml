@using JIRA_NTB.Models.ViewModels
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml"; // Sử dụng chung layout
}

<div class="flex items-center justify-center min-h-screen py-4">
    <div class="w-full max-w-md">
        <div class="bg-gray-800/50 backdrop-blur-xl rounded-2xl shadow-2xl border border-gray-700/50 overflow-hidden">

            <div class="bg-gradient-to-r from-purple-600 to-pink-600 p-3 text-center">
                <h2 class="text-2xl font-bold text-white">Tạo mật khẩu mới</h2>
            </div>

            <div class="p-4">

                <form asp-action="ResetPassword" method="post" class="space-y-4">

                    <div asp-validation-summary="All" class="bg-red-500/10 border border-red-500/50 rounded-lg p-3 text-red-400 text-sm"></div>

                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="Token" />

                    <p class="text-sm text-gray-300 text-center">
                        Vui lòng nhập mật khẩu mới của bạn.
                    </p>

                    <div class="space-y-1">
                        <label asp-for="NewPassword" class="block text-sm font-medium text-gray-200">
                            <i data-lucide="key" class="w-4 h-4 inline mr-2"></i>Mật khẩu mới
                        </label>
                        <div class="relative">
                            <input asp-for="NewPassword"
                                   type="password"
                                   id="passwordInput"
                                   class="w-full px-3 py-1.5 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-100 text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                                   placeholder="••••••••"
                                   autocomplete="new-password" />
                            <button type="button"
                                    onclick="togglePassword('passwordInput', 'eyeIcon1')"
                                    tabindex="-1"
                                    class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-200 transition-colors">
                                <i data-lucide="eye" id="eyeIcon1" class="w-4 h-4"></i>
                            </button>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-red-400 text-xs mt-1 block"></span>

                        <div class="mt-1 space-y-0.5 text-xs">
                            <p id="req-length" class="flex items-center gap-1 text-gray-400 transition-colors duration-200">
                                <i id="icon-length" data-lucide="circle" class="w-3 h-3"></i>
                                Tối thiểu 8 ký tự
                            </p>
                            <p id="req-case" class="flex items-center gap-1 text-gray-400 transition-colors duration-200">
                                <i id="icon-case" data-lucide="circle" class="w-3 h-3"></i>
                                Có chữ hoa và chữ thường
                            </p>
                            <p id="req-number" class="flex items-center gap-1 text-gray-400 transition-colors duration-200">
                                <i id="icon-number" data-lucide="circle" class="w-3 h-3"></i>
                                Có ít nhất 1 chữ số
                            </p>
                        </div>
                    </div>

                    <div class="space-y-1">
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-200">
                            <i data-lucide="shield-check" class="w-4 h-4 inline mr-2"></i>Xác nhận mật khẩu
                        </label>
                        <div class="relative">
                            <input asp-for="ConfirmPassword"
                                   type="password"
                                   id="confirmPasswordInput"
                                   class="w-full px-3 py-1.5 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-100 text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                                   placeholder="••••••••"
                                   autocomplete="new-password" />
                            <button type="button"
                                    onclick="togglePassword('confirmPasswordInput', 'eyeIcon2')"
                                    tabindex="-1"
                                    class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-200 transition-colors">
                                <i data-lucide="eye" id="eyeIcon2" class="w-4 h-4"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-red-400 text-xs mt-1 block"></span>
                    </div>

                    <button type="submit"
                            class="w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold py-2.5 px-4 rounded-lg transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg hover:shadow-xl flex items-center justify-center gap-2"
                            tabindex="-1">
                        <i data-lucide="save" class="w-5 h-5"></i>
                        Lưu mật khẩu mới
                    </button>
                </form>

            </div>
        </div>

        <div class="text-center mt-3 text-gray-400 text-xs">
            <p>© 2025 JIRA NTB. Hệ thống quản lý dự án chuyên nghiệp.</p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Hàm trợ giúp để cập nhật GIAO DIỆN của một yêu cầu
        function updateRequirement(textId, iconId, isValid)
        {
            const element = document.getElementById(textId);
            const iconElement = document.getElementById(iconId);

            if (!element || !iconElement) return;

            let newIconName = 'circle';
            let newColor = '#9ca3af'; // gray-400 - Mặc định: Xám

            if (isValid === true)
            {
                // Hợp lệ: Xanh lá
                newColor = '#22c55e'; // text-green-500
                newIconName = 'check-circle-2';
            }
            else if (isValid === false)
            {
                // Không hợp lệ: Đỏ
                newColor = '#ef4444'; // text-red-500
                newIconName = 'x-circle';
            }
            // isValid === null sẽ giữ nguyên màu xám và icon circle

            element.style.color = newColor;
            iconElement.setAttribute('data-lucide', newIconName);
        }

        // Password validation
        function validatePassword() {
            // Lấy giá trị trực tiếp từ ô input
            const password = document.getElementById('passwordInput').value;

            // Nếu ô input rỗng, reset tất cả về Xám (trạng thái null)
            if (password.length === 0)
            {
                updateRequirement('req-length', 'icon-length', null);
                updateRequirement('req-case', 'icon-case', null);
                updateRequirement('req-number', 'icon-number', null);
            }
            else
            {
                // Nếu có nhập, thì mới bắt đầu kiểm tra Đỏ/Xanh (true/false)

                // 1. Kiểm tra độ dài
                updateRequirement('req-length', 'icon-length', password.length >= 8);

                // 2. Kiểm tra chữ hoa/thường
                const caseRegex = /(?=.*[a-z])(?=.*[A-Z])/;
                updateRequirement('req-case', 'icon-case', caseRegex.test(password));

                // 3. Kiểm tra số
                const numberRegex = /\d/;
                updateRequirement('req-number', 'icon-number', numberRegex.test(password));
            }
            // Vẽ lại icon
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        }

        // Toggle password visibility
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const eyeIcon = document.getElementById(iconId);

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.setAttribute('data-lucide', 'eye-off');
            } else {
                passwordInput.type = 'password';
                eyeIcon.setAttribute('data-lucide', 'eye');
            }

            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        }

        // Reinitialize Lucide icons after page load
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }

            // Thêm event listener cho password input để validate realtime
            const passwordInput = document.getElementById('passwordInput');
            if (passwordInput) {
                passwordInput.addEventListener('input', validatePassword);
                passwordInput.addEventListener('keyup', validatePassword);
            }
        });
    </script>
}