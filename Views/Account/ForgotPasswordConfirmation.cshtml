@{
    ViewData["Title"] = "Đã gửi yêu cầu";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml"; // Sử dụng chung layout
}

<div class="flex items-center justify-center min-h-screen py-4">
    <div class="w-full max-w-md">
        <div class="bg-gray-800/50 backdrop-blur-xl rounded-2xl shadow-2xl border border-gray-700/50 overflow-hidden">

            <div class="bg-gradient-to-r from-purple-600 to-pink-600 p-3 text-center">
                <h2 class="text-2xl font-bold text-white">
                    <i data-lucide="mail-check" class="w-8 h-8 inline-block mb-1"></i>
                    <br>
                    Kiểm tra Email của bạn
                </h2>
            </div>

            <div class="p-4">

                <p class="text-base text-gray-200 text-center leading-relaxed">
                    Nếu email của bạn tồn tại trong hệ thống, chúng tôi đã gửi một email hướng dẫn đặt lại mật khẩu.
                </p>
                <p class="text-sm text-gray-400 text-center mt-3">
                    Vui lòng kiểm tra hộp thư (kể cả thư mục Spam) của bạn.
                </p>

                <div class="relative my-4">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-700"></div>
                    </div>
                </div>

                <div class="text-center mt-6">
                    <a asp-action="Login" 
                       class="inline-flex items-center gap-2 px-6 py-2.5 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl">
                        <i data-lucide="arrow-left" class="w-4 h-4"></i>
                        Quay lại trang Đăng nhập
                    </a>
                </div>
            </div>
        </div>

        <div class="text-center mt-3 text-gray-400 text-xs">
            <p>© 2025 JIRA NTB. Hệ thống quản lý dự án chuyên nghiệp.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
           if (typeof lucide !== 'undefined') {
                lucide.createIcons();
           }
        });
    </script>
}