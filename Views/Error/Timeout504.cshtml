@{
    ViewData["Title"] = "";
}

@section GlobalModals{
    <div id="server-error" class=" fixed inset-0 bg-black bg-opacity-50 flex flex-col items-center justify-center z-[9999] backdrop-blur-sm">
        <div class="flex flex-col items-center">

            <!-- Timeout 504 -->
            <div class="flex items-center justify-center min-h-[70vh] py-12 text-gray-200">
                <div class="w-full max-w-lg text-center bg-gray-800 p-8 sm:p-12 rounded-2xl shadow-2xl">
                    <div class="w-20 h-20 bg-yellow-900/50 border-4 border-yellow-800/60 rounded-full flex items-center justify-center mx-auto text-yellow-500">
                        <i data-lucide="hourglass" class="w-10 h-10"></i>
                    </div>

                    <h1 class="mt-8 text-7xl font-bold text-yellow-600">504</h1>

                    <h2 class="mt-4 text-2xl sm:text-3xl font-bold text-white">
                        Yêu cầu Hết thời gian chờ
                    </h2>

                    <p class="mt-4 text-gray-400 text-sm sm:text-base">
                        Máy chủ của chúng tôi đang mất quá nhiều thời gian để phản hồi. Điều này có thể do tải cao hoặc lỗi dịch vụ. Vui lòng thử lại sau vài phút.
                    </p>

                    <button onclick="window.location.reload();"
                            class="mt-8 inline-flex items-center justify-center gap-2 rounded-lg bg-indigo-600 px-6 py-3 text-sm font-medium text-white hover:bg-indigo-700 transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-800 shadow-lg hover:shadow-indigo-500/30">
                        <i data-lucide="refresh-cw" class="w-4 h-4"></i>
                        Thử lại
                    </button>
                </div>
            </div>

        </div>
    </div>
}
