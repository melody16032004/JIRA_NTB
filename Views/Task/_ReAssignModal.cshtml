<!-- Modal Thay Người -->
<div id="reassignModal"
     class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-[999] hidden">
    <div class="bg-gray-800 w-full max-w-md rounded-xl shadow-xl p-6 border border-gray-700">

        <h2 class="text-lg font-semibold text-gray-100 mb-4">Thay người thực hiện</h2>

        <form id="reassignForm" class="space-y-4">
            <!-- ID task ẩn -->
            <input type="hidden" id="reassignTaskId">
            <input type="hidden" id="reassignProjectId">

            <!-- Tên task -->
            <div>
                <label class="text-gray-300 text-sm">Tên task</label>
                <input id="reassignTaskName" type="text"
                       class="w-full mt-1 px-3 py-2 rounded-lg bg-gray-600 border border-gray-500 text-gray-400 cursor-not-allowed"
                       disabled>
            </div>

            <!-- Người thực hiện hiện tại -->
            <div>
                <label class="text-gray-300 text-sm">Người thực hiện hiện tại</label>
                <input id="reassignCurrentUser" type="text"
                       class="w-full mt-1 px-3 py-2 rounded-lg bg-gray-600 border border-gray-500 text-gray-400 cursor-not-allowed"
                       disabled>
            </div>

            <!-- Người thực hiện tiếp theo -->
            <div>
                <label class="text-gray-300 text-sm">Người thực hiện tiếp theo</label>
                <select id="reassignNewUser"
                        class="w-full mt-1 px-3 py-2 rounded-lg bg-gray-700 border border-gray-600 text-gray-200 outline-none">
                    <option value="">-- Đang tải... --</option>
                </select>
            </div>

            <!-- Tiến độ của người cũ -->
            <div>
                <label class="text-gray-300 text-sm">Tiến độ hiện tại (%)</label>
                <input id="reassignProgress" type="number" min="0" max="100"
                       class="w-full mt-1 px-3 py-2 rounded-lg bg-gray-700 border border-gray-600 text-gray-200 outline-none">
            </div>

            <!-- Lý do thay người -->
            <div>
                <label class="text-gray-300 text-sm">Lý do thay người</label>
                <textarea id="reassignReason"
                          class="w-full mt-1 px-3 py-2 rounded-lg bg-gray-700 border border-gray-600 text-gray-200 outline-none resize-none h-24"></textarea>
            </div>

            <!-- Buttons -->
            <div class="flex justify-end gap-3 mt-5">
                <button type="button" id="closeReassignModal"
                        class="px-4 py-2 bg-gray-600 hover:bg-gray-500 rounded-lg text-gray-200">
                    Hủy
                </button>

                <button type="submit"
                        class="px-4 py-2 bg-blue-600 hover:bg-blue-500 rounded-lg text-white">
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>
