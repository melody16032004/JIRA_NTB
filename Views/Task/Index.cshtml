@* Main Index View *@
@model TaskBoardViewModel
@{
    ViewData["Title"] = "Quản Lý Nhiệm Vụ";

    // Khởi tạo danh sách các cột cho Kanban board
    var columns = new List<TaskColumnViewModel>
    {
        new TaskColumnViewModel
        {
            Status = "TO DO",
            StatusTitle = "CẦN THỰC HIỆN",
            StatusColor = "bg-gray-500",
            Tasks = Model.TodoTasks.Take(10).ToList(),
            TotalCount = Model.TodoTasks.Count,
            StatusId = Model.Statuses
            .FirstOrDefault(s => s.StatusName == TaskStatusModel.Todo)?.StatusId
        },
        new TaskColumnViewModel
        {
            Status = "IN PROGRESS",
            StatusTitle = "ĐANG THỰC HIỆN",
            StatusColor = "bg-blue-500",
            Tasks = Model.InProgressTasks.Take(10).ToList(),
            TotalCount = Model.InProgressTasks.Count,
            StatusId = Model.Statuses
            .FirstOrDefault(s => s.StatusName == TaskStatusModel.InProgress)?.StatusId        
        },
        new TaskColumnViewModel
        {
            Status = "OVERDUE",
            StatusTitle = "TRỄ HẠN",
            StatusColor = "bg-red-500",
            Tasks = Model.OverdueTasks.Take(10).ToList(),
            TotalCount = Model.OverdueTasks.Count,
            StatusId = "False"
        },
        new TaskColumnViewModel
        {
            Status = "DONE",
            StatusTitle = "ĐÃ HOÀN THÀNH",
            StatusColor = "bg-green-500",
            PageSize = 5,
            Tasks = Model.DoneTasks.Take(5).ToList(),
            TotalCount = Model.DoneTasks.Count,
            StatusId = Model.Statuses
                .FirstOrDefault(s => s.StatusName == TaskStatusModel.Done)?.StatusId
        }
    };
}
<style>
.tab-btn {
    padding: 8px 16px;
    color: #ccc;
    border-bottom: 2px solid transparent;
}

    .tab-btn.active {
        color: white;
        border-bottom-color: #6366f1;
    }
</style>
<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <div class="z-10 bg-gray-900/95 backdrop-blur-sm border-b border-gray-800 shadow-lg">
        <div class="px-6 py-4">
            <div class="flex items-center gap-3">
                <div class="relative flex-1 max-w-md">
                    <i data-lucide="search" class="w-4 h-4 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2"></i>
                    <input type="text"
                           id="searchInput"
                           placeholder="Tìm kiếm nhiệm vụ..."
                           class="w-full pl-10 pr-4 py-2.5 bg-gray-800 border border-gray-700 rounded-lg text-gray-200 text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
                </div>

                @await Component.InvokeAsync("ProjectSelect", new { id = "headerProjectFilter", selectedId = ViewBag.SelectedProjectId })
                @if (User.IsInRole("ADMIN") || User.IsInRole("LEADER"))
                {
                <div class="relative group inline-block">
                    <button id="btnCreateTask"
                            class="flex items-center gap-2 px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg text-sm font-medium transition-all">
                        <i data-lucide="plus" class="w-4 h-4"></i>
                        Thêm mới
                    </button>
                    <span class="absolute left-1/2 -translate-x-1/2 mt-2 hidden group-hover:block bg-gray-800 text-white text-xs rounded-md py-1 px-2 whitespace-nowrap z-10">
                        Tạo nhiệm vụ
                    </span>
                </div>
                }
            </div>
        </div>
    </div>
    <div class="px-6 pt-4">
        <div class="flex items-center gap-2 border-b border-gray-700">
            <button id="tabKanban"
                    class="tab-btn active py-2 px-4 text-sm font-medium">
                Kanban Board
            </button>

            <button id="tabHistory"
                    class="tab-btn py-2 px-4 text-sm font-medium text-gray-400 hover:text-white border-b-2 border-transparent">
                Version History
            </button>
        </div>
    </div>
    <!-- KANBAN VIEW -->
    <div id="kanbanContainer" class="p-3">
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
            @foreach (var column in columns)
            {
                <partial name="_TaskColumn" model="column" />
            }
        </div>
    </div>

    <!-- HISTORY VIEW (empty, sẽ load bằng JS) -->
    <div id="historyContainer" class="p-3 hidden">
        <div id="historyLoading" class="text-gray-400">Đang tải dữ liệu...</div>
        <div id="historyContent"></div>
    </div>
</div>

@section GlobalModals {
    @await Html.PartialAsync("_TaskCreateModal")
    @await Html.PartialAsync("_ReAssignModal")
}
<link href="~/css/task-board.css" rel="stylesheet" />

@section Scripts {
    <script src="~/js/task-utils.js"></script>
    <script src="~/js/task-modal.js"></script>
    <script src="~/js/task-board.js"></script>
    <script src="~/js/task-infinite-scroll.js"></script>
}
