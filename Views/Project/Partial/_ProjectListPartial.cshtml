@model JIRA_NTB.ViewModels.ProjectListViewModel

@if (Model.Projects.Any())
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        @foreach (var project in Model.Projects)
        {
            <div class="bg-opacity-1 dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-all border border-gray-200 dark:border-gray-700 overflow-hidden group">
                <div class="h-1 bg-gradient-to-r @project.StatusColor"></div>

                <div class="p-4 flex flex-col h-full">
                    <!-- Phần trên: Linh hoạt theo nội dung -->
                    <div class="flex-shrink-0">
                        <div class="flex items-start justify-between mb-3">
                            <div class="flex-1 min-w-0">
                                <h3 class="text-base font-semibold text-gray-900 dark:text-white mb-1 truncate group-hover:text-indigo-600 transition-colors">
                                    @project.ProjectName
                                </h3>
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium @project.StatusBadgeColor">
                                    <i data-lucide="@project.StatusIcon" class="w-3 h-3 mr-1"></i>
                                    @project.StatusName
                                </span>
                            </div>

                            <div x-data="{ open: false }" class="relative ml-2">
                                <button @@click="open = !open"
                                        class="p-1 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors">
                                    <i data-lucide="more-vertical" class="w-4 h-4 text-gray-400"></i>
                                </button>

                                <ul x-show="open"
                                    x-cloak
                                    @@click.away="open = false"
                                    x-transition.origin.top.right
                                    class="absolute right-0 mt-1 w-36 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-lg z-50 text-sm">
                                    <li>
                                        <button type="button"
                                                class="edit-project-btn w-full text-left block px-3 py-2 hover:bg-gray-100 dark:hover:bg-gray-700"
                                                data-id="@project.IdProject">
                                            Chỉnh sửa
                                        </button>
                                    </li>
                                    <li><hr class="border-gray-200 dark:border-gray-700 my-1" /></li>
                                    <li>
                                        <button type="button"
                                                class="delete-project-btn w-full text-left block px-3 py-2 text-red-600 hover:bg-red-50 dark:hover:bg-gray-700"
                                                data-id="@project.IdProject"
                                                data-name="@project.ProjectName">
                                            Xóa dự án
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="space-y-1.5 mb-3 pb-3 border-b border-gray-200 dark:border-gray-700">
                            <div class="flex items-center text-xs text-gray-600 dark:text-gray-400">
                                <i data-lucide="calendar-days" class="w-3.5 h-3.5 mr-1.5 text-gray-400"></i>
                                <span>@(project.StartDay?.ToString("dd/MM/yyyy") ?? "-")</span>
                                <i data-lucide="arrow-right" class="w-3 h-3 mx-1"></i>
                                <span>@(project.EndDay?.ToString("dd/MM/yyyy") ?? "-")</span>
                            </div>
                            @if (project.CompletedDate.HasValue)
                            {
                                <div class="flex items-center text-xs text-green-600 dark:text-green-400">
                                    <i data-lucide="check-circle-2" class="w-3.5 h-3.5 mr-1.5"></i>
                                    <span>@project.CompletedDate.Value.ToString("dd/MM/yyyy")</span>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Phần dưới: Cố định vị trí -->
                    <div class="mt-auto flex-shrink-0">
                        <div class="mb-3">
                            <p class="text-[10px] font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-1.5">Người quản lý</p>
                            @if (project.ProjectManager != null)
                            {
                                <div class="flex items-center gap-2">
                                    <img src="@project.ProjectManager.AvatarUrl" alt="@project.ProjectManager.UserName"
                                         class="w-6 h-6 rounded-full border border-gray-200 dark:border-gray-700"
                                         title="@project.ProjectManager.UserName">
                                    <span class="text-xs font-medium text-gray-700 dark:text-gray-300 truncate">
                                        @project.ProjectManager.UserName
                                    </span>
                                </div>
                            }
                            else
                            {
                                <span class="text-xs text-gray-400 dark:text-gray-500 italic">Chưa chỉ định</span>
                            }
                        </div>

                        <div class="mb-3">
                            <p class="text-[10px] font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-1.5">Thành viên</p>
                            <div class="flex items-center gap-1">
                                <div class="flex -space-x-1.5">
                                    @foreach (var member in project.Members.Take(4))
                                    {
                                        <img src="@member.AvatarUrl" alt="@member.UserName"
                                             class="w-6 h-6 rounded-full border-2 border-white dark:border-gray-800 hover:z-10 hover:scale-110 transition-transform"
                                             title="@member.UserName">
                                    }
                                    @if (project.RemainingMembers > 0)
                                    {
                                        <div class="w-6 h-6 rounded-full border-2 border-white dark:border-gray-800 bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-[10px] font-semibold text-gray-600 dark:text-gray-300">
                                            +@project.RemainingMembers
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="flex items-center justify-between mb-1">
                                <span class="text-xs font-medium text-gray-500 dark:text-gray-400">Tiến độ</span>
                                <span class="text-xs font-semibold @project.ProgressTextColor">@project.Progress%</span>
                            </div>
                            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-1.5">
                                <div class="bg-gradient-to-r @project.ProgressColor h-1.5 rounded-full transition-all" style="width:@($"{project.Progress}%")"></div>
                            </div>
                        </div>

                        <a asp-action="Details" asp-route-id="@project.IdProject"
                           class="w-full py-1.5 px-3 bg-gray-50 dark:bg-gray-700 hover:bg-indigo-50 dark:hover:bg-indigo-900 text-gray-700 dark:text-gray-300 hover:text-indigo-600 rounded text-xs font-medium transition-colors flex items-center justify-center gap-1.5">
                            <span>Chi tiết</span>
                            <i data-lucide="arrow-right" class="w-3.5 h-3.5"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-12 text-sm text-gray-500 dark:text-gray-400">
        Không có dự án nào phù hợp.
    </div>
}
