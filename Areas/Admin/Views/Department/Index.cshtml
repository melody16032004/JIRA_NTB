@using JIRA_NTB.Admin.Controllers
@model PaginatedList<DepartmentModel>

@{
    ViewData["Title"] = "Quản lý phòng ban";
    var totalDepartments = Model?.TotalItems ?? 0;
    var totalEmployees = Model?.Sum(d => d.Users?.Count ?? 0) ?? 0;
}

<div class="container mx-auto px-4 py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-500/20 border border-green-500 text-green-300 px-4 py-3 rounded-lg relative mb-4" role="alert">
            <strong class="font-bold">Thành công!</strong>
            <span class="block sm:inline">@TempData["SuccessMessage"]</span>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-500/20 border border-red-500 text-red-300 px-4 py-3 rounded-lg relative mb-4" role="alert">
            <strong class="font-bold">Lỗi!</strong>
            <span class="block sm:inline">@TempData["ErrorMessage"]</span>
        </div>
    }

    <!-- Feature Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-3 mb-6">
        <div class="bg-gradient-to-br from-indigo-500/10 to-indigo-600/10 border border-indigo-500/20 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
                <div class="w-10 h-10 bg-indigo-500/20 rounded-lg flex items-center justify-center">
                    <i data-lucide="building" class="w-5 h-5 text-indigo-400"></i>
                </div>
                <span class="text-indigo-400 text-xs font-medium">Tổng số</span>
            </div>
            <h3 class="text-2xl font-bold text-white">@totalDepartments</h3>
            <p class="text-gray-400 text-xs mt-0.5">Phòng ban</p>
        </div>

        <div class="bg-gradient-to-br from-green-500/10 to-green-600/10 border border-green-500/20 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
                <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center">
                    <i data-lucide="users" class="w-5 h-5 text-green-400"></i>
                </div>
                <span class="text-green-400 text-xs font-medium">Nhân viên</span>
            </div>
            <h3 class="text-2xl font-bold text-white">@totalEmployees</h3>
            <p class="text-gray-400 text-xs mt-0.5">Tổng số nhân viên</p>
        </div>

        <div class="bg-gradient-to-br from-yellow-500/10 to-yellow-600/10 border border-yellow-500/20 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
                <div class="w-10 h-10 bg-yellow-500/20 rounded-lg flex items-center justify-center">
                    <i data-lucide="briefcase" class="w-5 h-5 text-yellow-400"></i>
                </div>
                <span class="text-yellow-400 text-xs font-medium">Trưởng phòng</span>
            </div>
            <h3 class="text-2xl font-bold text-white">@ViewBag.LeaderCount</h3>
            <p class="text-gray-400 text-xs mt-0.5">Tổng số trưởng phòng</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="w-full">
        <!-- Department List -->
        <div class="bg-gray-800/50 backdrop-blur-xl border border-gray-700 rounded-2xl shadow-2xl overflow-hidden">
            <div class="bg-gradient-to-r from-indigo-600/20 to-blue-600/20 border-b border-gray-700 px-6 py-4">
                <form method="get" asp-action="Index" class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-white flex items-center gap-2">
                        <i data-lucide="list" class="w-5 h-5"></i>
                        Danh sách phòng ban
                    </h2>
                    <div class="flex items-center gap-2">
                        <div class="relative">
                            <input type="text" 
                                   name="searchString"
                                   value="@ViewBag.CurrentSearch"
                                   placeholder="Tìm kiếm" 
                                   class="pl-10 pr-4 py-2 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-200 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                            <i data-lucide="search" class="w-4 h-4 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2"></i>
                        </div>
                        <button type="submit" class="inline-flex items-center gap-1.5 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg text-sm transition-colors duration-200">
                            <i data-lucide="search" class="w-4 h-4"></i>
                            Tìm
                        </button>
                        <a asp-action="Index" class="inline-flex items-center gap-1.5 px-3 py-2 bg-gray-600 hover:bg-gray-500 text-white rounded-lg text-sm transition-colors duration-200">
                            <i data-lucide="rotate-ccw" class="w-3.5 h-3.5"></i>
                            Reset
                        </a>
                        <button type="button" onclick="openAddDepartmentModal()" class="inline-flex items-center gap-1.5 px-4 py-2 bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 text-white rounded-lg text-sm transition-colors duration-200 shadow-lg">
                            <i data-lucide="plus-circle" class="w-4 h-4"></i>
                            Thêm phòng ban
                        </button>
                        <input type="hidden" name="pageNumber" value="1" />
                    </div>
                </form>
            </div>

                <div class="p-6">
                    @if (totalDepartments == 0)
                    {
                        <!-- Empty State -->
                        <div class="text-center py-16">
                            <div class="inline-flex items-center justify-center w-20 h-20 bg-gray-700/30 rounded-full mb-6">
                                <i data-lucide="inbox" class="w-10 h-10 text-gray-500"></i>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-300 mb-2">Chưa có phòng ban nào</h3>
                            <p class="text-gray-500 mb-6">Bắt đầu bằng cách thêm phòng ban đầu tiên của bạn</p>
                            <button onclick="openAddDepartmentModal()" class="inline-flex items-center gap-2 bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 text-white font-semibold py-2.5 px-6 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg">
                                <i data-lucide="plus-circle" class="w-4 h-4"></i>
                                Thêm phòng ban đầu tiên
                            </button>
                        </div>
                    }
                    else
                    {
                        <!-- Department Cards -->
                        <div class="grid grid-cols-1 gap-3">
                            @foreach (var dept in Model!)
                            {
                                <div class="bg-gray-900/50 border border-gray-700 rounded-lg p-4 hover:border-indigo-500/50 transition-all duration-300 group">
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center gap-3">
                                            <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-blue-600 rounded-lg flex items-center justify-center shadow-lg flex-shrink-0">
                                                <i data-lucide="building-2" class="w-5 h-5 text-white"></i>
                                            </div>
                                            <div class="min-w-0">
                                                <h3 class="text-base font-bold text-white group-hover:text-indigo-400 transition-colors truncate">@dept.DepartmentName</h3>
                                                <div class="flex items-center gap-3 mt-0.5">
                                                    <span class="inline-flex items-center gap-1 text-gray-400 text-xs">
                                                        <i data-lucide="users" class="w-3 h-3"></i>
                                                        @(dept.Users?.Count() ?? 0)
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="flex items-center gap-1.5 flex-shrink-0">
                                            <button onclick="openEditDepartmentModal('@dept.IdDepartment', '@dept.DepartmentName')" 
                                               class="p-1.5 bg-indigo-600/20 hover:bg-indigo-600 text-indigo-400 hover:text-white rounded-lg transition-all"
                                               title="Sửa">
                                                <i data-lucide="edit" class="w-4 h-4"></i>
                                            </button>
                                            <button onclick="openDeleteDepartmentModal('@dept.IdDepartment', '@dept.DepartmentName')"
                                               class="p-1.5 bg-red-600/20 hover:bg-red-600 text-red-400 hover:text-white rounded-lg transition-all"
                                               title="Xóa">
                                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Pagination Footer -->
                @if (Model.TotalPages > 1)
                {
                    <div class="border-t border-gray-700 px-6 py-4">
                        <div class="flex justify-between items-center">
                            <!-- Thông tin trang -->
                            <p class="text-gray-400 text-sm">
                                Hiển thị <span class="text-white font-semibold">@((Model.PageIndex - 1) * 5 + 1)</span> 
                                - <span class="text-white font-semibold">@(Math.Min(Model.PageIndex * 5, Model.TotalItems))</span> 
                                trong tổng số <span class="text-white font-semibold">@Model.TotalItems</span> phòng ban
                            </p>

                            <!-- Nút phân trang -->
                            <div class="flex items-center gap-2">
                                <!-- Nút Previous -->
                                @if (Model.HasPreviousPage)
                                {
                                    <a asp-action="Index" 
                                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                                       asp-route-searchString="@ViewBag.CurrentSearch"
                                       class="px-3 py-2 bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg text-sm transition-colors duration-200 flex items-center gap-1">
                                        <i data-lucide="chevron-left" class="w-4 h-4"></i>
                                        <span>Trước</span>
                                    </a>
                                }
                                else
                                {
                                    <span class="px-3 py-2 bg-gray-800 text-gray-500 rounded-lg text-sm cursor-not-allowed flex items-center gap-1">
                                        <i data-lucide="chevron-left" class="w-4 h-4"></i>
                                        <span>Trước</span>
                                    </span>
                                }

                                <!-- Số trang -->
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    if (i == Model.PageIndex)
                                    {
                                        <span class="px-3 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium">
                                            @i
                                        </span>
                                    }
                                    else
                                    {
                                        <a asp-action="Index" 
                                           asp-route-pageNumber="@i"
                                           asp-route-searchString="@ViewBag.CurrentSearch"
                                           class="px-3 py-2 bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg text-sm transition-colors duration-200">
                                            @i
                                        </a>
                                    }
                                }

                                <!-- Nút Next -->
                                @if (Model.HasNextPage)
                                {
                                    <a asp-action="Index" 
                                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                                       asp-route-searchString="@ViewBag.CurrentSearch"
                                       class="px-3 py-2 bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg text-sm transition-colors duration-200 flex items-center gap-1">
                                        <span>Sau</span>
                                        <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                    </a>
                                }
                                else
                                {
                                    <span class="px-3 py-2 bg-gray-800 text-gray-500 rounded-lg text-sm cursor-not-allowed flex items-center gap-1">
                                        <span>Sau</span>
                                        <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal Popup Thêm Phòng Ban -->
<div id="addDepartmentModal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-gray-800/95 border border-gray-700 rounded-2xl shadow-2xl max-w-md w-full transform transition-all duration-300 scale-95 opacity-0" id="modalContent">
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-blue-600 px-6 py-4 rounded-t-2xl flex items-center justify-between">
            <h2 class="text-xl font-semibold text-white flex items-center gap-2">
                <i data-lucide="plus-square" class="w-5 h-5"></i>
                Thêm phòng ban mới
            </h2>
            <button onclick="closeAddDepartmentModal()" class="text-white/80 hover:text-white transition-colors">
                <i data-lucide="x" class="w-6 h-6"></i>
            </button>
        </div>

        <!-- Modal Body -->
        <form asp-area="Admin" asp-controller="Department" asp-action="Create" method="post" class="p-6 space-y-4">
            @Html.AntiForgeryToken()

            <div>
                <label class="block text-sm font-medium text-gray-200 mb-2">
                    <i data-lucide="building-2" class="w-4 h-4 inline mr-1"></i>
                    Tên phòng ban <span class="text-red-400">*</span>
                </label>
                <input type="text" 
                       name="DepartmentName"
                       required
                       placeholder="VD: Phòng Công nghệ thông tin" 
                       class="w-full px-4 py-2.5 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-100 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
            </div>

            <!-- Modal Footer -->
            <div class="flex justify-end gap-2 pt-4 border-t border-gray-700">
                <button type="button" onclick="closeAddDepartmentModal()" class="inline-flex items-center justify-center gap-2 bg-gray-700 hover:bg-gray-600 text-gray-300 font-semibold py-2.5 px-4 rounded-lg transition-all duration-200">
                    <i data-lucide="x" class="w-4 h-4"></i>
                    Hủy
                </button>
                <button type="submit" class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 text-white font-semibold py-2.5 px-4 rounded-lg transition-all duration-200 shadow-lg">
                    <i data-lucide="save" class="w-4 h-4"></i>
                    Lưu
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal Popup Sửa Phòng Ban -->
<div id="editDepartmentModal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-gray-800/95 border border-gray-700 rounded-2xl shadow-2xl max-w-md w-full transform transition-all duration-300 scale-95 opacity-0" id="editModalContent">
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-purple-600 to-indigo-600 px-6 py-4 rounded-t-2xl flex items-center justify-between">
            <h2 class="text-xl font-semibold text-white flex items-center gap-2">
                <i data-lucide="edit" class="w-5 h-5"></i>
                Chỉnh sửa phòng ban
            </h2>
            <button onclick="closeEditDepartmentModal()" class="text-white/80 hover:text-white transition-colors">
                <i data-lucide="x" class="w-6 h-6"></i>
            </button>
        </div>

        <!-- Modal Body -->
        <form asp-area="Admin" asp-controller="Department" asp-action="Edit" method="post" class="p-6 space-y-4">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" id="editDepartmentId" />
            <div>
                <label class="block text-sm font-medium text-gray-200 mb-2">
                    <i data-lucide="tag" class="w-4 h-4 inline mr-1"></i>
                    Mã phòng ban <span class="text-red-400">*</span>
                </label>
                <input type="text" 
                       name="IdDepartment"
                       id="editDepartmentIdDisplay"
                       readonly
                       class="w-full px-4 py-2.5 bg-gray-700/50 border border-gray-600 rounded-lg text-gray-400 text-sm cursor-not-allowed">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-200 mb-2">
                    <i data-lucide="building-2" class="w-4 h-4 inline mr-1"></i>
                    Tên phòng ban <span class="text-red-400">*</span>
                </label>
                <input type="text" 
                       name="DepartmentName"
                       id="editDepartmentName"
                       required
                       placeholder="VD: Phòng Công nghệ thông tin" 
                       class="w-full px-4 py-2.5 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-100 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all">
            </div>

            <!-- Modal Footer -->
            <div class="flex justify-end gap-2 pt-4 border-t border-gray-700">
                <button type="button" onclick="closeEditDepartmentModal()" class="inline-flex items-center justify-center gap-2 bg-gray-700 hover:bg-gray-600 text-gray-300 font-semibold py-2.5 px-4 rounded-lg transition-all duration-200">
                    <i data-lucide="x" class="w-4 h-4"></i>
                    Hủy
                </button>
                <button type="submit" class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 text-white font-semibold py-2.5 px-4 rounded-lg transition-all duration-200 shadow-lg">
                    <i data-lucide="save" class="w-4 h-4"></i>
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal Popup Xóa Phòng Ban -->
<div id="deleteDepartmentModal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-gray-800/95 border border-gray-700 rounded-2xl shadow-2xl max-w-md w-full transform transition-all duration-300 scale-95 opacity-0" id="deleteModalContent">
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-red-600 to-pink-600 px-6 py-4 rounded-t-2xl flex items-center justify-between">
            <h2 class="text-xl font-semibold text-white flex items-center gap-2">
                <i data-lucide="alert-triangle" class="w-5 h-5"></i>
                Xác nhận xóa phòng ban
            </h2>
            <button onclick="closeDeleteDepartmentModal()" class="text-white/80 hover:text-white transition-colors">
                <i data-lucide="x" class="w-6 h-6"></i>
            </button>
        </div>

        <!-- Modal Body -->
        <div class="p-6">
            <div class="bg-red-500/10 border border-red-500/30 rounded-lg p-4 mb-4">
                <p class="text-gray-300 text-sm flex items-start gap-2">
                    <i data-lucide="info" class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5"></i>
                    <span>Bạn có chắc chắn muốn xóa phòng ban này không? Hành động này không thể hoàn tác.</span>
                </p>
            </div>

            <div class="bg-gray-900/50 border border-gray-700 rounded-lg p-4 mb-4">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 bg-gradient-to-br from-red-600 to-pink-600 rounded-lg flex items-center justify-center shadow-lg flex-shrink-0">
                        <i data-lucide="building-2" class="w-6 h-6 text-white"></i>
                    </div>
                    <div>
                        <p class="text-xs text-gray-400 mb-1">Tên phòng ban</p>
                        <h3 class="text-base font-bold text-white" id="deleteDepartmentName"></h3>
                        <p class="text-xs text-gray-500 mt-1">ID: <span id="deleteDepartmentId"></span></p>
                    </div>
                </div>
            </div>

            <form asp-area="Admin" asp-controller="Department" asp-action="Delete" method="post" id="deleteForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="IdDepartment" id="deleteFormId" />

                <!-- Modal Footer -->
                <div class="flex justify-end gap-2 pt-4 border-t border-gray-700">
                    <button type="button" onclick="closeDeleteDepartmentModal()" class="inline-flex items-center justify-center gap-2 bg-gray-700 hover:bg-gray-600 text-gray-300 font-semibold py-2.5 px-4 rounded-lg transition-all duration-200">
                        <i data-lucide="x" class="w-4 h-4"></i>
                        Hủy
                    </button>
                    <button type="submit" class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-red-600 to-pink-600 hover:from-red-700 hover:to-pink-700 text-white font-semibold py-2.5 px-4 rounded-lg transition-all duration-200 shadow-lg">
                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                        Xóa phòng ban
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    lucide.createIcons();
    
    // ===== MODAL THÊM PHÒNG BAN =====
    // Mở modal
    function openAddDepartmentModal() {
        const modal = document.getElementById('addDepartmentModal');
        const modalContent = document.getElementById('modalContent');
        
        modal.classList.remove('hidden');
        
        // Animation delay
        setTimeout(() => {
            modalContent.classList.remove('scale-95', 'opacity-0');
            modalContent.classList.add('scale-100', 'opacity-100');
        }, 10);
        
        // Prevent body scroll
        document.body.style.overflow = 'hidden';
        
        // Re-initialize icons
        setTimeout(() => lucide.createIcons(), 50);
    }
    
    // Đóng modal
    function closeAddDepartmentModal() {
        const modal = document.getElementById('addDepartmentModal');
        const modalContent = document.getElementById('modalContent');
        
        modalContent.classList.remove('scale-100', 'opacity-100');
        modalContent.classList.add('scale-95', 'opacity-0');
        
        setTimeout(() => {
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }, 300);
    }
    
    // Đóng modal khi click bên ngoài
    document.getElementById('addDepartmentModal')?.addEventListener('click', function(e) {
        if (e.target === this) {
            closeAddDepartmentModal();
        }
    });
    
    // ===== MODAL SỬA PHÒNG BAN =====
    // Mở modal edit
    function openEditDepartmentModal(id, name) {
        const modal = document.getElementById('editDepartmentModal');
        const modalContent = document.getElementById('editModalContent');
        
        // Điền dữ liệu vào form
        document.getElementById('editDepartmentId').value = id;
        document.getElementById('editDepartmentIdDisplay').value = id;
        document.getElementById('editDepartmentName').value = name;
        
        modal.classList.remove('hidden');
        
        // Animation delay
        setTimeout(() => {
            modalContent.classList.remove('scale-95', 'opacity-0');
            modalContent.classList.add('scale-100', 'opacity-100');
        }, 10);
        
        // Prevent body scroll
        document.body.style.overflow = 'hidden';
        
        // Re-initialize icons
        setTimeout(() => lucide.createIcons(), 50);
    }
    
    // Đóng modal edit
    function closeEditDepartmentModal() {
        const modal = document.getElementById('editDepartmentModal');
        const modalContent = document.getElementById('editModalContent');
        
        modalContent.classList.remove('scale-100', 'opacity-100');
        modalContent.classList.add('scale-95', 'opacity-0');
        
        setTimeout(() => {
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }, 300);
    }
    
    // Đóng modal edit khi click bên ngoài
    document.getElementById('editDepartmentModal')?.addEventListener('click', function(e) {
        if (e.target === this) {
            closeEditDepartmentModal();
        }
    });
    
    // ===== MODAL XÓA PHÒNG BAN =====
    // Mở modal delete
    function openDeleteDepartmentModal(id, name) {
        const modal = document.getElementById('deleteDepartmentModal');
        const modalContent = document.getElementById('deleteModalContent');
        
        // Điền dữ liệu vào modal
        document.getElementById('deleteDepartmentId').textContent = id;
        document.getElementById('deleteDepartmentName').textContent = name;
        document.getElementById('deleteFormId').value = id;
        
        modal.classList.remove('hidden');
        
        // Animation delay
        setTimeout(() => {
            modalContent.classList.remove('scale-95', 'opacity-0');
            modalContent.classList.add('scale-100', 'opacity-100');
        }, 10);
        
        // Prevent body scroll
        document.body.style.overflow = 'hidden';
        
        // Re-initialize icons
        setTimeout(() => lucide.createIcons(), 50);
    }
    
    // Đóng modal delete
    function closeDeleteDepartmentModal() {
        const modal = document.getElementById('deleteDepartmentModal');
        const modalContent = document.getElementById('deleteModalContent');
        
        modalContent.classList.remove('scale-100', 'opacity-100');
