@model IEnumerable<DepartmentModel>

@{
    ViewData["Title"] = "Quản lý phòng ban";
    var totalDepartments = Model?.Count() ?? 0;
    var totalEmployees = Model?.Sum(d => d.Users?.Count ?? 0) ?? 0;
}

<div class="container mx-auto px-4 py-4">
    <!-- Header Section -->
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-4xl font-bold text-white mb-2 flex items-center gap-3">
                Danh sách các phòng ban
            </h1>
        </div>
        <button onclick="openAddDepartmentModal()" class="inline-flex items-center gap-2 bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-indigo-500/50">
            <i data-lucide="plus-circle" class="w-5 h-5"></i>
            Thêm phòng ban mới
        </button>
    </div>

    <!-- Feature Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-gradient-to-br from-indigo-500/10 to-indigo-600/10 border border-indigo-500/20 rounded-xl p-6 hover:scale-105 transition-transform duration-300">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-indigo-500/20 rounded-lg flex items-center justify-center">
                    <i data-lucide="building" class="w-6 h-6 text-indigo-400"></i>
                </div>
                <span class="text-indigo-400 text-sm font-medium">Tổng số</span>
            </div>
            <h3 class="text-3xl font-bold text-white">@totalDepartments</h3>
            <p class="text-gray-400 text-sm mt-1">Phòng ban</p>
        </div>

        <div class="bg-gradient-to-br from-green-500/10 to-green-600/10 border border-green-500/20 rounded-xl p-6 hover:scale-105 transition-transform duration-300">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center">
                    <i data-lucide="users" class="w-6 h-6 text-green-400"></i>
                </div>
                <span class="text-green-400 text-sm font-medium">Nhân viên</span>
            </div>
            <h3 class="text-3xl font-bold text-white">@totalEmployees</h3>
            <p class="text-gray-400 text-sm mt-1">Tổng số nhân viên</p>
        </div>

        <div class="bg-gradient-to-br from-yellow-500/10 to-yellow-600/10 border border-yellow-500/20 rounded-xl p-6 hover:scale-105 transition-transform duration-300">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-yellow-500/20 rounded-lg flex items-center justify-center">
                    <i data-lucide="users" class="w-6 h-6 text-yellow-400"></i>
                </div>
                <span class="text-yellow-400 text-sm font-medium">Trưởng nhóm</span>
            </div>
            <h3 class="text-3xl font-bold text-white">@totalEmployees</h3>
            <p class="text-gray-400 text-sm mt-1">Tổng số trưởng nhóm</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="w-full">
        <!-- Department List -->
        <div class="bg-gray-800/50 backdrop-blur-xl border border-gray-700 rounded-2xl shadow-2xl overflow-hidden">
            <div class="bg-gradient-to-r from-indigo-600/20 to-blue-600/20 border-b border-gray-700 px-6 py-4">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-white flex items-center gap-2">
                        <i data-lucide="list" class="w-5 h-5"></i>
                        Danh sách phòng ban
                    </h2>
                    <div class="relative">
                        <input type="text" 
                               id="searchInput"
                               placeholder="Tìm kiếm" 
                               class="pl-10 pr-4 py-2 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-200 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                        <i data-lucide="search" class="w-4 h-4 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2"></i>
                    </div>
                </div>
            </div>

                <div class="p-6">
                    @if (totalDepartments == 0)
                    {
                        <!-- Empty State -->
                        <div class="text-center py-16">
                            <div class="inline-flex items-center justify-center w-20 h-20 bg-gray-700/30 rounded-full mb-6">
                                <i data-lucide="inbox" class="w-10 h-10 text-gray-500"></i>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-300 mb-2">Chưa có phòng ban nào</h3>
                            <p class="text-gray-500 mb-6">Bắt đầu bằng cách thêm phòng ban đầu tiên của bạn</p>
                            <button onclick="openAddDepartmentModal()" class="inline-flex items-center gap-2 bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 text-white font-semibold py-2.5 px-6 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg">
                                <i data-lucide="plus-circle" class="w-4 h-4"></i>
                                Thêm phòng ban đầu tiên
                            </button>
                        </div>
                    }
                    else
                    {
                        <!-- Department Cards -->
                        <div class="grid grid-cols-1 gap-3" id="departmentList">
                            @foreach (var dept in Model!)
                            {
                                <div class="bg-gray-900/50 border border-gray-700 rounded-lg p-4 hover:border-indigo-500/50 transition-all duration-300 group department-card">
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center gap-3">
                                            <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-blue-600 rounded-lg flex items-center justify-center shadow-lg flex-shrink-0">
                                                <i data-lucide="building-2" class="w-5 h-5 text-white"></i>
                                            </div>
                                            <div class="min-w-0">
                                                <h3 class="text-base font-bold text-white group-hover:text-indigo-400 transition-colors truncate department-name">@dept.DepartmentName</h3>
                                                <div class="flex items-center gap-3 mt-0.5">
                                                    <span class="inline-flex items-center gap-1 text-gray-400 text-xs">
                                                        <i data-lucide="users" class="w-3 h-3"></i>
                                                        @(dept.Users?.Count() ?? 0)
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="flex items-center gap-1.5 flex-shrink-0">
                                            <a asp-action="Edit" asp-route-id="@dept.IdDepartment" 
                                               class="p-1.5 bg-indigo-600/20 hover:bg-indigo-600 text-indigo-400 hover:text-white rounded-lg transition-all"
                                               title="Sửa">
                                                <i data-lucide="edit" class="w-4 h-4"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@dept.IdDepartment"
                                               class="p-1.5 bg-red-600/20 hover:bg-red-600 text-red-400 hover:text-white rounded-lg transition-all"
                                               title="Xóa">
                                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <!-- Thông báo không tìm thấy kết quả -->
                        <div id="noResultsMessage" class="hidden text-center py-12">
                            <i data-lucide="search-x" class="w-16 h-16 text-gray-500 mx-auto mb-4"></i>
                            <p class="text-gray-400 text-lg font-medium">Không tìm thấy phòng ban</p>
                            <p class="text-gray-500 text-sm mt-2">Không có kết quả phù hợp với từ khóa tìm kiếm</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Popup Thêm Phòng Ban -->
<div id="addDepartmentModal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-gray-800/95 border border-gray-700 rounded-2xl shadow-2xl max-w-md w-full transform transition-all duration-300 scale-95 opacity-0" id="modalContent">
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-blue-600 px-6 py-4 rounded-t-2xl flex items-center justify-between">
            <h2 class="text-xl font-semibold text-white flex items-center gap-2">
                <i data-lucide="plus-square" class="w-5 h-5"></i>
                Thêm phòng ban mới
            </h2>
            <button onclick="closeAddDepartmentModal()" class="text-white/80 hover:text-white transition-colors">
                <i data-lucide="x" class="w-6 h-6"></i>
            </button>
        </div>

        <!-- Modal Body -->
        <form asp-action="Create" method="post" class="p-6 space-y-4">
            @Html.AntiForgeryToken()
            
            <div>
                <label class="block text-sm font-medium text-gray-200 mb-2">
                    <i data-lucide="tag" class="w-4 h-4 inline mr-1"></i>
                    Mã phòng ban <span class="text-red-400">*</span>
                </label>
                <input type="text" 
                       name="IdDepartment"
                       required
                       placeholder="VD: IT-001" 
                       class="w-full px-4 py-2.5 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-100 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-200 mb-2">
                    <i data-lucide="building-2" class="w-4 h-4 inline mr-1"></i>
                    Tên phòng ban <span class="text-red-400">*</span>
                </label>
                <input type="text" 
                       name="DepartmentName"
                       required
                       placeholder="VD: Phòng Công nghệ thông tin" 
                       class="w-full px-4 py-2.5 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-100 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
            </div>

            <!-- Modal Footer -->
            <div class="flex gap-3 pt-4 border-t border-gray-700">
                <button type="submit" class="flex-1 inline-flex items-center justify-center gap-2 bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 text-white font-semibold py-2.5 px-4 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg">
                    <i data-lucide="save" class="w-4 h-4"></i>
                    Lưu
                </button>
                <button type="button" onclick="closeAddDepartmentModal()" class="inline-flex items-center justify-center gap-2 bg-gray-700 hover:bg-gray-600 text-gray-300 font-semibold py-2.5 px-4 rounded-lg transition-all duration-200">
                    <i data-lucide="x" class="w-4 h-4"></i>
                    Hủy
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    lucide.createIcons();
    
    // ===== XỬ LÝ TÌM KIẾM PHÒNG BAN =====
    const searchInput = document.getElementById('searchInput');
    const departmentCards = document.querySelectorAll('.department-card');
    const departmentList = document.getElementById('departmentList');
    const noResultsMessage = document.getElementById('noResultsMessage');
    
    if (searchInput && departmentCards.length > 0) {
        searchInput.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase().trim();
            let visibleCount = 0;
            
            departmentCards.forEach(card => {
                const departmentName = card.querySelector('.department-name')?.textContent.toLowerCase() || '';
                
                if (searchTerm === '' || departmentName.includes(searchTerm)) {
                    card.style.display = '';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });
            
            // Hiển thị/ẩn thông báo "Không tìm thấy"
            if (visibleCount === 0) {
                departmentList.style.display = 'none';
                noResultsMessage.classList.remove('hidden');
                lucide.createIcons();
            } else {
                departmentList.style.display = '';
                noResultsMessage.classList.add('hidden');
            }
            
            console.log(`Hiển thị ${visibleCount}/${departmentCards.length} phòng ban`);
        });
    }
    
    // ===== MODAL XỬ LÝ =====
    // Mở modal
    function openAddDepartmentModal() {
        const modal = document.getElementById('addDepartmentModal');
        const modalContent = document.getElementById('modalContent');
        
        modal.classList.remove('hidden');
        
        // Animation delay
        setTimeout(() => {
            modalContent.classList.remove('scale-95', 'opacity-0');
            modalContent.classList.add('scale-100', 'opacity-100');
        }, 10);
        
        // Prevent body scroll
        document.body.style.overflow = 'hidden';
        
        // Re-initialize icons
        setTimeout(() => lucide.createIcons(), 50);
    }
    
    // Đóng modal
    function closeAddDepartmentModal() {
        const modal = document.getElementById('addDepartmentModal');
        const modalContent = document.getElementById('modalContent');
        
        modalContent.classList.remove('scale-100', 'opacity-100');
        modalContent.classList.add('scale-95', 'opacity-0');
        
        setTimeout(() => {
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }, 300);
    }
    
    // Đóng modal khi click bên ngoài
    document.getElementById('addDepartmentModal')?.addEventListener('click', function(e) {
        if (e.target === this) {
            closeAddDepartmentModal();
        }
    });
    
    // Đóng modal khi nhấn ESC
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeAddDepartmentModal();
        }
    });
</script>